<% content_for :layout_centered, true %>

<div class="w-full max-w-md">
  <div class="rounded-3xl bg-gradient-to-b from-white to-gray-50 p-1 shadow-sm ring-1 ring-gray-200">
    <div class="rounded-[22px] bg-white px-6 py-7 shadow-sm">
      <div class="flex flex-col gap-1">
        <div class="inline-flex items-center gap-2">
          <span class="inline-flex h-9 w-9 items-center justify-center rounded-2xl bg-gray-900 text-sm font-semibold text-white">A</span>
          <div class="flex flex-col">
            <h1 class="text-xl font-semibold tracking-tight text-gray-900">Ověření</h1>
            <p class="text-sm text-gray-600">Zadejte kód z autentifikační aplikace.</p>
          </div>
        </div>
      </div>

      <div class="mt-6">
        <% if flash[:alert] %>
          <div class="mb-4 rounded-2xl border border-rose-200 bg-rose-50 p-4 text-sm text-rose-900"><%= flash[:alert] %></div>
        <% end %>

        <%= form_with url: admin_otp_challenge_path, method: :post, class: "flex flex-col gap-4" do |f| %>
          <div class="flex flex-col gap-2">
            <%= f.label :otp_code, "Ověřovací kód", class: "text-sm font-medium text-gray-900" %>
            <%= f.text_field :otp_code,
                             autofocus: true,
                             autocomplete: "one-time-code",
                             inputmode: "numeric",
                             pattern: "[0-9a-fA-F]*",
                             placeholder: "123456",
                             class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
          </div>

          <p class="text-xs text-gray-500">Nebo zadejte záložní kód.</p>

          <%= f.submit "Ověřit",
                       class: "mt-1 inline-flex items-center justify-center rounded-2xl bg-gray-900 px-4 py-2.5 text-sm font-medium text-white shadow-sm hover:bg-black focus:outline-none focus:ring-2 focus:ring-gray-900/20" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mt-6 text-center text-sm text-gray-600">
    <%= link_to "Zpět na přihlášení", new_admin_session_path, class: "font-medium text-gray-900 hover:underline" %>
  </div>
</div>
