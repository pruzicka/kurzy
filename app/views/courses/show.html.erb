<% content_for :layout_fullscreen, true %>
<% content_for :title, @course.name %>
<% og_title @course.name %>
<% og_type "product" %>
<% canonical_url course_url(@course) %>
<% if @course.description&.body&.present? %>
  <% description_text = @course.description.body.to_plain_text %>
  <% meta_description description_text %>
  <% og_description description_text %>
<% end %>
<% if @course.cover_image.attached? %>
  <% og_image rails_blob_url(@course.cover_image) %>
<% end %>
<%= course_structured_data(@course) %>

<div class="min-h-screen w-full">
  <%= render "shared/navbar", course: @course %>

  <% if @enrolled %>
    <div class="flex h-[calc(100vh-57px-56px)] w-full overflow-hidden">
      <div class="flex w-full max-w-[360px] shrink-0 flex-col border-r border-gray-200 bg-white/70 backdrop-blur">
        <div id="course_sidebar" class="flex-1 overflow-y-auto">
          <%= render "courses/sidebar", course: @course, current_segment: nil, completions_by_segment_id: @completions_by_segment_id, enrolled: true %>
        </div>
      </div>

      <div class="flex-1 bg-white">
        <div id="course_main" class="h-full w-full">
          <%= render "courses/main_hero", course: @course, enrolled: true %>
        </div>
      </div>
    </div>
    <footer class="mt-auto border-t border-gray-200 bg-white/80 backdrop-blur">
      <div class="px-5 py-6">
        <%= render "shared/footer_links" %>
      </div>
    </footer>
  <% else %>
    <div class="mx-auto max-w-4xl px-6 py-12">
      <div class="rounded-3xl border border-gray-200 bg-white shadow-sm">
        <%= render "courses/main_hero", course: @course, enrolled: false %>
      </div>
      <div class="mt-8 text-center text-sm text-gray-500">
        Nákupem získáte neomezený přístup ke všem lekcím a materiálům kurzu.
      </div>
    </div>
    <footer class="mt-auto border-t border-gray-200 bg-white/80 backdrop-blur">
      <div class="mx-auto max-w-4xl px-5 py-6">
        <%= render "shared/footer_links" %>
      </div>
    </footer>
  <% end %>
</div>
