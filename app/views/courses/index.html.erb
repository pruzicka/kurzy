<div class="w-full">
  <div class="flex items-end justify-between gap-4">
    <h1 class="text-3xl font-semibold tracking-tight">Kurzy</h1>
    <%= link_to "Zpet na uvod", root_path, class: "text-sm font-medium text-gray-900 hover:underline" %>
  </div>

  <div class="mt-6 grid grid-cols-1 gap-4 md:grid-cols-2">
    <% @courses.each do |course| %>
      <%= link_to course_path(course), class: "group rounded-2xl border border-gray-200 bg-white p-6 shadow-sm hover:border-gray-300" do %>
        <div class="flex flex-col gap-2">
          <div class="flex items-start justify-between gap-4">
            <h2 class="text-lg font-semibold tracking-tight group-hover:underline"><%= course.name %></h2>
            <span class="shrink-0 rounded-full bg-gray-100 px-3 py-1 text-xs font-medium text-gray-700">
              <%= number_to_currency(course.price, unit: course.currency, precision: 0) %>
            </span>
          </div>
          <% if course.description&.body&.present? %>
            <p class="text-sm text-gray-600"><%= truncate(course.description.body.to_plain_text, length: 180) %></p>
          <% else %>
            <p class="text-sm text-gray-500">Popis brzy doplnime.</p>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
