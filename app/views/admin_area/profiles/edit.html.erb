<div class="flex items-end justify-between gap-4">
  <div class="flex flex-col gap-1">
    <h1 class="text-3xl font-semibold tracking-tight text-gray-900">Můj profil</h1>
    <p class="text-sm text-gray-600">Upravte své údaje pro přihlášení.</p>
  </div>
</div>

<div class="mt-6 rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
  <%= form_with model: @admin, url: admin_profile_path, class: "flex flex-col gap-6" do |f| %>
    <% if @admin.errors.any? %>
      <div class="rounded-2xl border border-rose-200 bg-rose-50 p-4 text-sm text-rose-900">
        <div class="font-semibold">Formulář obsahuje chyby:</div>
        <ul class="mt-2 list-disc pl-5">
          <% @admin.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div class="flex flex-col gap-2">
        <%= f.label :first_name, "Jméno", class: "text-sm font-medium text-gray-900" %>
        <%= f.text_field :first_name, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
      </div>
      <div class="flex flex-col gap-2">
        <%= f.label :last_name, "Příjmení", class: "text-sm font-medium text-gray-900" %>
        <%= f.text_field :last_name, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div class="flex flex-col gap-2">
        <%= f.label :username, "Uživatelské jméno", class: "text-sm font-medium text-gray-900" %>
        <%= f.text_field :username, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
      </div>
      <div class="flex flex-col gap-2">
        <%= f.label :email, "E-mail", class: "text-sm font-medium text-gray-900" %>
        <%= f.email_field :email, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div class="flex flex-col gap-2">
        <%= f.label :password, "Nové heslo (volitelné)", class: "text-sm font-medium text-gray-900" %>
        <%= f.password_field :password, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
      </div>
      <div class="flex flex-col gap-2">
        <%= f.label :password_confirmation, "Potvrzení hesla", class: "text-sm font-medium text-gray-900" %>
        <%= f.password_field :password_confirmation, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
      </div>
    </div>

    <div class="flex items-center gap-3">
      <%= f.submit "Uložit", class: "inline-flex items-center justify-center rounded-2xl bg-gray-900 px-4 py-2.5 text-sm font-medium text-white hover:bg-black" %>
      <%= link_to "Zpět", admin_root_path, class: "inline-flex items-center justify-center rounded-2xl border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
    </div>
  <% end %>
</div>

