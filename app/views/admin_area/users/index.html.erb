<div class="flex items-end justify-between gap-4">
  <div class="flex flex-col gap-1">
    <h1 class="text-3xl font-semibold tracking-tight text-gray-900">Uživatelé</h1>
    <p class="text-sm text-gray-600">Přehled registrovaných uživatelů.</p>
  </div>
</div>

<div class="mt-6 overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-sm">
  <div class="grid grid-cols-12 gap-0 border-b border-gray-200 bg-gray-50 px-4 py-3 text-xs font-semibold uppercase tracking-wide text-gray-600">
    <div class="col-span-4">Uživatel</div>
    <div class="col-span-3">Kurzy</div>
    <div class="col-span-3">Objednávky</div>
    <div class="col-span-2 text-right">Akce</div>
  </div>

  <div class="divide-y divide-gray-100">
    <% @users.each do |user| %>
      <div class="grid grid-cols-12 items-center gap-0 px-4 py-4 text-sm">
        <div class="col-span-4">
          <div class="font-medium text-gray-900"><%= user.name %></div>
          <div class="text-xs text-gray-500"><%= user.email %></div>
        </div>
        <div class="col-span-3 text-xs text-gray-500"><%= user.enrollments.size %> zakoupeno</div>
        <div class="col-span-3 text-xs text-gray-500"><%= user.orders.size %> objednávek</div>
        <div class="col-span-2 flex justify-end">
          <%= link_to "Detail", admin_user_path(user), class: "rounded-xl border border-gray-300 bg-white px-3 py-2 text-xs font-semibold text-gray-900 hover:bg-gray-50" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
