<div class="flex items-end justify-between gap-4">
  <div class="flex flex-col gap-1">
    <h1 class="text-3xl font-semibold tracking-tight text-gray-900">Objednávka</h1>
    <p class="text-sm text-gray-600">Detail objednávky #<%= @order.id %>.</p>
  </div>
  <%= link_to "Zpět", admin_orders_path, class: "inline-flex items-center justify-center rounded-2xl border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
</div>

<div class="mt-6 grid grid-cols-1 gap-6 lg:grid-cols-3">
  <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm lg:col-span-2">
    <h2 class="text-lg font-semibold text-gray-900">Položky</h2>
    <div class="mt-4 space-y-3">
      <% @order.order_items.each do |item| %>
        <div class="flex items-center justify-between rounded-2xl border border-gray-200 bg-gray-50 px-4 py-3 text-sm">
          <div>
            <div class="font-medium text-gray-900"><%= item.display_name %></div>
            <div class="text-xs text-gray-500"><%= item.course.course_type_label %></div>
          </div>
          <div class="text-right">
            <div class="font-semibold text-gray-900">
              <%= number_to_currency(item.unit_amount / (item.course.currency_precision.zero? ? 1.0 : 100.0), unit: item.currency, precision: item.course.display_precision) %>
            </div>
            <div class="text-xs text-gray-500">Množství: <%= item.quantity %></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
    <h2 class="text-lg font-semibold text-gray-900">Souhrn</h2>
    <div class="mt-4 space-y-2 text-sm text-gray-700">
      <div class="flex items-center justify-between">
        <span>Uživatel</span>
        <span class="font-semibold text-gray-900"><%= @order.user.name %></span>
      </div>
      <div class="flex items-center justify-between">
        <span>Stav</span>
        <span class="rounded-full bg-gray-100 px-2.5 py-1 text-xs font-semibold text-gray-700"><%= @order.status %></span>
      </div>
      <div class="flex items-center justify-between">
        <span>Mezisoučet</span>
        <span class="font-semibold text-gray-900"><%= number_to_currency(@order.subtotal_amount / (@order.currency_precision.zero? ? 1.0 : 100.0), unit: @order.currency, precision: @order.display_precision) %></span>
      </div>
      <% if @order.discount_amount.positive? %>
        <div class="flex items-center justify-between text-emerald-700">
          <span>Sleva</span>
          <span class="font-semibold">-<%= number_to_currency(@order.discount_amount / (@order.currency_precision.zero? ? 1.0 : 100.0), unit: @order.currency, precision: @order.display_precision) %></span>
        </div>
      <% end %>
      <div class="flex items-center justify-between text-base font-semibold text-gray-900">
        <span>Celkem</span>
        <span><%= number_to_currency(@order.total_amount / (@order.currency_precision.zero? ? 1.0 : 100.0), unit: @order.currency, precision: @order.display_precision) %></span>
      </div>
      <% if @order.coupon.present? %>
        <div class="mt-2 rounded-xl border border-emerald-200 bg-emerald-50 px-3 py-2 text-xs text-emerald-900">
          Použitý kód: <span class="font-semibold"><%= @order.coupon.code %></span>
        </div>
      <% end %>
      <div class="mt-2 text-xs text-gray-500">Vytvořeno: <%= l(@order.created_at, format: :short) %></div>
      <% if @order.stripe_session_id.present? %>
        <div class="text-xs text-gray-500">Stripe session: <%= @order.stripe_session_id %></div>
      <% end %>
    </div>
  </div>
</div>

<%# ── Faktura ── %>
<div class="mt-6 rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
  <h2 class="text-lg font-semibold text-gray-900">Faktura</h2>
  <% if @order.fakturoid_invoice? %>
    <div class="mt-4 space-y-2 text-sm text-gray-700">
      <div class="flex items-center justify-between">
        <span>Číslo faktury</span>
        <span class="font-semibold text-gray-900"><%= @order.fakturoid_invoice_number %></span>
      </div>
      <div class="flex items-center gap-3 mt-3">
        <% if @order.fakturoid_private_url.present? %>
          <%= link_to "Otevřít ve Fakturoidu", safe_external_url(@order.fakturoid_private_url), target: "_blank", rel: "noopener", class: "rounded-xl border border-gray-300 bg-white px-3 py-2 text-xs font-semibold text-gray-900 hover:bg-gray-50" %>
        <% end %>
        <% if @order.fakturoid_public_url.present? %>
          <%= link_to "Veřejný odkaz", safe_external_url(@order.fakturoid_public_url), target: "_blank", rel: "noopener", class: "rounded-xl border border-gray-300 bg-white px-3 py-2 text-xs font-semibold text-gray-900 hover:bg-gray-50" %>
        <% end %>
        <%= button_to "Znovu odeslat e-mail", resend_invoice_email_admin_order_path(@order), method: :post, class: "rounded-xl border border-gray-300 bg-white px-3 py-2 text-xs font-semibold text-gray-900 hover:bg-gray-50" %>
      </div>
    </div>
  <% elsif @order.paid? %>
    <div class="mt-4 text-sm text-gray-500">
      Faktura zatím nebyla vystavena.
    </div>
    <%= button_to "Vytvořit fakturu", admin_order_create_invoice_path(@order), method: :post, class: "mt-3 rounded-xl border border-gray-300 bg-white px-3 py-2 text-xs font-semibold text-gray-900 hover:bg-gray-50" %>
  <% else %>
    <div class="mt-4 text-sm text-gray-500">Faktura bude vystavena po zaplacení.</div>
  <% end %>
</div>

<%# ── Vratka ── %>
<% if policy(@order).refund? %>
  <div class="mt-6 rounded-2xl border border-rose-200 bg-rose-50 p-6 shadow-sm">
    <h2 class="text-lg font-semibold text-rose-900">Vratka platby</h2>
    <p class="mt-2 text-sm text-rose-700">Vrácení platby nelze vzít zpět. Uživateli bude odebrán přístup ke kurzům a bude vytvořen dobropis.</p>
    <%= form_with url: refund_admin_order_path(@order), method: :post, class: "mt-4" do |f| %>
      <div class="flex items-end gap-3">
        <%= f.text_field :reason, placeholder: "Důvod vratky (nepovinné)", class: "flex-1 rounded-xl border border-rose-300 bg-white px-3 py-2 text-sm text-gray-900 placeholder:text-gray-400 focus:border-rose-500 focus:ring-rose-500" %>
        <%= f.submit "Vrátit platbu", class: "rounded-xl bg-rose-600 px-4 py-2 text-sm font-semibold text-white hover:bg-rose-700", data: { turbo_confirm: "Opravdu chcete vrátit platbu? Tuto akci nelze vzít zpět." } %>
      </div>
    <% end %>
  </div>
<% end %>

<% if @order.status == "refunded" %>
  <div class="mt-6 rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
    <h2 class="text-lg font-semibold text-gray-900">Informace o vratce</h2>
    <div class="mt-4 space-y-2 text-sm text-gray-700">
      <% if @order.refunded_at.present? %>
        <div class="flex items-center justify-between">
          <span>Vráceno</span>
          <span class="font-semibold text-gray-900"><%= l(@order.refunded_at, format: :short) %></span>
        </div>
      <% end %>
      <% if @order.refund_reason.present? %>
        <div class="flex items-center justify-between">
          <span>Důvod</span>
          <span class="font-semibold text-gray-900"><%= @order.refund_reason %></span>
        </div>
      <% end %>
      <% if @order.fakturoid_correction? %>
        <div class="flex items-center justify-between">
          <span>Dobropis</span>
          <span class="font-semibold text-gray-900"><%= @order.fakturoid_correction_number %></span>
        </div>
        <% if @order.fakturoid_correction_url.present? %>
          <div class="mt-3">
            <%= link_to "Otevřít dobropis ve Fakturoidu", safe_external_url(@order.fakturoid_correction_url), target: "_blank", rel: "noopener", class: "rounded-xl border border-gray-300 bg-white px-3 py-2 text-xs font-semibold text-gray-900 hover:bg-gray-50" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

<%# ── Fakturační údaje ── %>
<% if @order.billing_info_present? %>
  <div class="mt-6 rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
    <h2 class="text-lg font-semibold text-gray-900">Fakturační údaje</h2>
    <div class="mt-4 space-y-1 text-sm text-gray-700">
      <div class="font-semibold text-gray-900"><%= @order.billing_name %></div>
      <% if @order.billing_street.present? %><div><%= @order.billing_street %></div><% end %>
      <% if @order.billing_city.present? || @order.billing_zip.present? %>
        <div><%= [@order.billing_zip, @order.billing_city].compact_blank.join(" ") %></div>
      <% end %>
      <% if @order.billing_country.present? %><div><%= @order.billing_country %></div><% end %>
      <% if @order.billing_ico.present? %><div class="mt-2 text-xs text-gray-500">IČO: <%= @order.billing_ico %></div><% end %>
      <% if @order.billing_dic.present? %><div class="text-xs text-gray-500">DIČ: <%= @order.billing_dic %></div><% end %>
    </div>
  </div>
<% end %>
