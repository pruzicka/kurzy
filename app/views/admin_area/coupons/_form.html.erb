<%= form_with model: [:admin, coupon], class: "flex flex-col gap-5" do |f| %>
  <% if coupon.errors.any? %>
    <div class="rounded-2xl border border-rose-200 bg-rose-50 p-4 text-sm text-rose-900">
      <div class="font-semibold">Formulář obsahuje chyby:</div>
      <ul class="mt-2 list-disc pl-5">
        <% coupon.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
    <div class="flex flex-col gap-2">
      <%= f.label :code, "Kód", class: "text-sm font-medium text-gray-900" %>
      <%= f.text_field :code, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
    </div>
    <div class="flex flex-col gap-2">
      <%= f.label :name, "Název (volitelné)", class: "text-sm font-medium text-gray-900" %>
      <%= f.text_field :name, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
    </div>
  </div>

  <div class="flex flex-col gap-2">
    <%= f.label :notes, "Poznámka (interní)", class: "text-sm font-medium text-gray-900" %>
    <%= f.text_area :notes, rows: 3, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
  </div>

  <div class="grid grid-cols-1 gap-4 md:grid-cols-[200px_1fr]">
    <div class="flex flex-col gap-2">
      <%= f.label :discount_type, "Typ slevy", class: "text-sm font-medium text-gray-900" %>
      <%= f.select :discount_type, [["Procenta", "percent"], ["Částka", "amount"]], {}, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
    </div>
    <div class="flex flex-col gap-2">
      <%= f.label :value, "Hodnota", class: "text-sm font-medium text-gray-900" %>
      <%= f.number_field :value, min: 1, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
      <div class="text-xs text-gray-500">U procent zadejte hodnotu 1–100. U částky zadejte hodnotu v měně (např. 10 = 10 CZK).</div>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-4 md:grid-cols-[200px_1fr]">
    <div class="flex flex-col gap-2">
      <%= f.label :currency, "Měna (pro částku)", class: "text-sm font-medium text-gray-900" %>
      <%= f.text_field :currency, placeholder: "CZK", class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
    </div>
    <div class="flex flex-col gap-2">
      <%= f.label :max_redemptions, "Max. použití", class: "text-sm font-medium text-gray-900" %>
      <%= f.number_field :max_redemptions, min: 1, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
    <div class="flex flex-col gap-2">
      <%= f.label :starts_at, "Platný od", class: "text-sm font-medium text-gray-900" %>
      <%= f.date_field :starts_at, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
      <div class="text-xs text-gray-500">Formát: DD/MM/RRRR</div>
    </div>
    <div class="flex flex-col gap-2">
      <%= f.label :ends_at, "Platný do", class: "text-sm font-medium text-gray-900" %>
      <%= f.date_field :ends_at, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
      <div class="text-xs text-gray-500">Formát: DD/MM/RRRR</div>
    </div>
  </div>

  <label class="flex items-center gap-3 text-sm text-gray-700">
    <%= f.check_box :active, class: "h-4 w-4 rounded border-gray-300 text-gray-900" %>
    Aktivní kód
  </label>

  <div class="flex items-center gap-3">
    <%= f.submit "Uložit", class: "inline-flex items-center justify-center rounded-2xl bg-gray-900 px-4 py-2.5 text-sm font-medium text-white hover:bg-black" %>
    <%= link_to "Zpět", admin_coupons_path, class: "inline-flex items-center justify-center rounded-2xl border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
  </div>
<% end %>
