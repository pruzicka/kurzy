<div class="flex items-end justify-between gap-4">
  <div class="flex flex-col gap-1">
    <h1 class="text-3xl font-semibold tracking-tight text-gray-900">Slevové kódy</h1>
    <p class="text-sm text-gray-600">Správa slev a jejich dostupnosti.</p>
  </div>
  <%= link_to "Nový kód", new_admin_coupon_path, class: "inline-flex items-center justify-center rounded-2xl bg-gray-900 px-4 py-2.5 text-sm font-medium text-white hover:bg-black" %>
</div>

<div class="mt-6 overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-sm">
  <div class="grid grid-cols-12 gap-0 border-b border-gray-200 bg-gray-50 px-4 py-3 text-xs font-semibold uppercase tracking-wide text-gray-600">
    <div class="col-span-3">Kód</div>
    <div class="col-span-3">Typ</div>
    <div class="col-span-2">Platnost</div>
    <div class="col-span-2">Použití</div>
    <div class="col-span-2 text-right">Akce</div>
  </div>

  <div class="divide-y divide-gray-100">
    <% @coupons.each do |coupon| %>
      <div class="grid grid-cols-12 items-center gap-0 px-4 py-4 text-sm">
        <div class="col-span-3">
          <div class="font-semibold text-gray-900"><%= coupon.code %></div>
          <div class="text-xs text-gray-500"><%= coupon.name.presence || "Bez názvu" %></div>
          <% if coupon.notes.present? %>
            <div class="text-xs text-gray-400"><%= coupon.notes %></div>
          <% end %>
        </div>
        <div class="col-span-3">
          <div class="font-medium text-gray-900">
            <% precision = Course::ZERO_DECIMAL_CURRENCIES.include?((coupon.currency || "CZK").upcase) ? 0 : 2 %>
            <%= coupon.percent? ? "#{coupon.value} %" : number_to_currency(coupon.value, unit: coupon.currency || "CZK", precision: precision) %>
          </div>
          <div class="text-xs text-gray-500"><%= coupon.percent? ? "Procenta" : "Částka" %></div>
        </div>
        <div class="col-span-2 text-xs text-gray-500">
          <div><%= coupon.starts_at ? l(coupon.starts_at, format: :short) : "—" %></div>
          <div><%= coupon.ends_at ? l(coupon.ends_at, format: :short) : "—" %></div>
        </div>
        <div class="col-span-2 text-xs text-gray-500">
          <div><%= coupon.redemptions_count %> / <%= coupon.max_redemptions || "∞" %></div>
          <div>
            <% if coupon.active_now? %>
              <span class="rounded-full bg-emerald-50 px-2 py-0.5 text-xs font-semibold text-emerald-800">Aktivní</span>
            <% else %>
              <span class="rounded-full bg-gray-100 px-2 py-0.5 text-xs font-semibold text-gray-600">Neaktivní</span>
            <% end %>
          </div>
        </div>
        <div class="col-span-2 flex justify-end gap-2">
          <%= link_to "Detail", admin_coupon_path(coupon), class: "rounded-xl border border-gray-300 bg-white px-3 py-2 text-xs font-semibold text-gray-900 hover:bg-gray-50" %>
          <%= link_to "Upravit", edit_admin_coupon_path(coupon), class: "rounded-xl border border-gray-300 bg-white px-3 py-2 text-xs font-semibold text-gray-900 hover:bg-gray-50" %>
          <%= button_to "Smazat", admin_coupon_path(coupon), method: :delete, data: { turbo_confirm: "Smazat slevový kód?" }, class: "rounded-xl border border-rose-200 bg-rose-50 px-3 py-2 text-xs font-semibold text-rose-900 hover:bg-rose-100" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
