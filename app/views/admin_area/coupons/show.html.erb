<div class="flex items-end justify-between gap-4">
  <div class="flex flex-col gap-1">
    <h1 class="text-3xl font-semibold tracking-tight text-gray-900"><%= @coupon.code %></h1>
    <p class="text-sm text-gray-600"><%= @coupon.name.presence || "Slevový kód" %></p>
  </div>
  <div class="flex items-center gap-2">
    <%= link_to "Upravit", edit_admin_coupon_path(@coupon), class: "inline-flex items-center justify-center rounded-2xl border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
    <%= link_to "Zpět", admin_coupons_path, class: "inline-flex items-center justify-center rounded-2xl border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
  </div>
</div>

<div class="mt-6 grid grid-cols-1 gap-6 lg:grid-cols-3">
  <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
    <h2 class="text-lg font-semibold text-gray-900">Nastavení</h2>
    <div class="mt-4 space-y-2 text-sm text-gray-700">
      <div class="flex items-center justify-between">
        <span>Typ slevy</span>
        <span class="font-semibold text-gray-900"><%= @coupon.percent? ? "Procenta" : "Částka" %></span>
      </div>
      <div class="flex items-center justify-between">
        <span>Hodnota</span>
        <% precision = Course::ZERO_DECIMAL_CURRENCIES.include?((@coupon.currency || "CZK").upcase) ? 0 : 2 %>
        <span class="font-semibold text-gray-900"><%= @coupon.percent? ? "#{@coupon.value} %" : number_to_currency(@coupon.value, unit: @coupon.currency || "CZK", precision: precision) %></span>
      </div>
      <div class="flex items-center justify-between">
        <span>Platnost</span>
        <span class="font-semibold text-gray-900"><%= @coupon.active? ? "Aktivní" : "Neaktivní" %></span>
      </div>
      <div class="flex items-center justify-between">
        <span>Od</span>
        <span class="font-semibold text-gray-900"><%= @coupon.starts_at ? l(@coupon.starts_at, format: :short) : "—" %></span>
      </div>
      <div class="flex items-center justify-between">
        <span>Do</span>
        <span class="font-semibold text-gray-900"><%= @coupon.ends_at ? l(@coupon.ends_at, format: :short) : "—" %></span>
      </div>
      <div class="flex items-center justify-between">
        <span>Max. použití</span>
        <span class="font-semibold text-gray-900"><%= @coupon.max_redemptions || "∞" %></span>
      </div>
      <div class="flex items-center justify-between">
        <span>Uplatněno</span>
        <span class="font-semibold text-gray-900"><%= @coupon.redemptions_count %></span>
      </div>
      <% if @coupon.notes.present? %>
        <div class="mt-3 rounded-xl border border-gray-200 bg-gray-50 px-3 py-2 text-xs text-gray-600">
          <%= @coupon.notes %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm lg:col-span-2">
    <h2 class="text-lg font-semibold text-gray-900">Použití kódu</h2>
    <% if @redemptions.any? %>
      <div class="mt-4 overflow-hidden rounded-2xl border border-gray-200">
        <div class="grid grid-cols-12 gap-0 border-b border-gray-200 bg-gray-50 px-4 py-3 text-xs font-semibold uppercase tracking-wide text-gray-600">
          <div class="col-span-4">Uživatel</div>
          <div class="col-span-3">Objednávka</div>
          <div class="col-span-3">Datum</div>
          <div class="col-span-2 text-right">Akce</div>
        </div>
        <div class="divide-y divide-gray-100">
          <% @redemptions.each do |redemption| %>
            <div class="grid grid-cols-12 items-center gap-0 px-4 py-4 text-sm">
              <div class="col-span-4">
                <div class="font-medium text-gray-900"><%= redemption.user.name %></div>
                <div class="text-xs text-gray-500"><%= redemption.user.email %></div>
              </div>
              <div class="col-span-3 text-xs text-gray-500">#<%= redemption.order_id %></div>
              <div class="col-span-3 text-xs text-gray-500"><%= l(redemption.redeemed_at, format: :short) %></div>
              <div class="col-span-2 flex justify-end">
                <%= link_to "Detail", admin_order_path(redemption.order_id), class: "rounded-xl border border-gray-300 bg-white px-3 py-2 text-xs font-semibold text-gray-900 hover:bg-gray-50" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="mt-3 text-sm text-gray-500">Kód zatím nebyl použit.</div>
    <% end %>
  </div>
</div>
