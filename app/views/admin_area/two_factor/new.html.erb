<div class="flex items-end justify-between gap-4">
  <div class="flex flex-col gap-1">
    <h1 class="text-3xl font-semibold tracking-tight text-gray-900">Nastavit 2FA</h1>
    <p class="text-sm text-gray-600">Naskenujte QR kód autentifikační aplikací a zadejte ověřovací kód.</p>
  </div>
</div>

<div class="mt-6 rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
  <div class="flex flex-col items-center gap-6 md:flex-row md:items-start">
    <div class="flex flex-col items-center gap-3">
      <div class="rounded-2xl border border-gray-200 bg-white p-4">
        <%= @qr_svg.html_safe %>
      </div>
      <p class="max-w-xs text-center text-xs text-gray-500">
        Naskenujte pomocí 1Password, Google Authenticator, Authy nebo jiné TOTP aplikace.
      </p>
    </div>

    <div class="flex-1">
      <% if flash[:alert] %>
        <div class="mb-4 rounded-2xl border border-rose-200 bg-rose-50 p-4 text-sm text-rose-900"><%= flash[:alert] %></div>
      <% end %>

      <%= form_with url: admin_two_factor_path, method: :post, class: "flex flex-col gap-4" do |f| %>
        <div class="flex flex-col gap-2">
          <%= f.label :otp_code, "Ověřovací kód", class: "text-sm font-medium text-gray-900" %>
          <%= f.text_field :otp_code,
                           autofocus: true,
                           autocomplete: "one-time-code",
                           inputmode: "numeric",
                           pattern: "[0-9]*",
                           placeholder: "123456",
                           class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
        </div>

        <div class="flex items-center gap-3">
          <%= f.submit "Aktivovat 2FA", class: "inline-flex items-center justify-center rounded-2xl bg-gray-900 px-4 py-2.5 text-sm font-medium text-white hover:bg-black" %>
          <%= link_to "Zrušit", edit_admin_profile_path, class: "inline-flex items-center justify-center rounded-2xl border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
