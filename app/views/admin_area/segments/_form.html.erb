<%= form_with model: [:admin, course, chapter, segment], class: "flex flex-col gap-5" do |f| %>
  <% if segment.errors.any? %>
    <div class="rounded-2xl border border-rose-200 bg-rose-50 p-4 text-sm text-rose-900">
      <div class="font-semibold">Formulář obsahuje chyby:</div>
      <ul class="mt-2 list-disc pl-5">
        <% segment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col gap-2">
    <%= f.label :title, "Název segmentu", class: "text-sm font-medium text-gray-900" %>
    <%= f.text_field :title, autofocus: true, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
  </div>

  <div class="flex flex-col gap-2">
    <%= f.label :content, "Obsah", class: "text-sm font-medium text-gray-900" %>
    <%= f.rich_text_area :content, placeholder: "Obsah segmentu..." %>
  </div>

  <label class="flex items-center gap-2.5 text-sm text-gray-700">
    <%= f.check_box :is_free_preview, class: "h-4 w-4 rounded border-gray-300 text-gray-900 focus:ring-gray-900/20" %>
    <span class="font-medium">Bezplatný náhled</span>
    <span class="text-xs text-gray-500">— přístupný bez přihlášení a bez zakoupení kurzu</span>
  </label>

  <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
    <div class="flex flex-col gap-2" data-controller="media-picker">
      <%= f.label :video_asset_id, "Video z knihovny (volitelné)", class: "text-sm font-medium text-gray-900" %>
      <div class="flex items-center justify-between gap-3 rounded-2xl border border-gray-200 bg-white px-4 py-3 text-sm">
        <div class="min-w-0">
          <% if segment.video_asset.present? %>
            <div class="text-xs text-gray-500">Vybrané video</div>
            <%= link_to segment.video_asset.title,
                        rails_blob_path(segment.video_asset.file, disposition: "inline"),
                        class: "truncate font-medium text-gray-900 hover:underline",
                        target: "_blank",
                        rel: "noopener",
                        data: { media_picker_target: "selectedLink" } %>
          <% else %>
            <div class="text-xs text-gray-500">Vybrané video</div>
            <div class="text-sm text-gray-600" data-media-picker-target="selectedEmpty">Zatím nevybráno</div>
            <a href="#" class="hidden" data-media-picker-target="selectedLink"></a>
          <% end %>
        </div>
        <div class="flex items-center gap-2">
          <button type="button" data-action="media-picker#open" class="rounded-xl border border-gray-300 bg-white px-3 py-2 text-xs font-medium text-gray-900 hover:bg-gray-50">Vybrat</button>
          <button type="button" data-action="media-picker#clear" class="rounded-xl border border-gray-200 bg-gray-50 px-3 py-2 text-xs font-medium text-gray-700 hover:bg-gray-100 <%= segment.video_asset.present? ? "" : "hidden" %>" data-media-picker-target="clear">Odebrat</button>
        </div>
      </div>
      <%= f.hidden_field :video_asset_id, data: { media_picker_target: "input" } %>

      <div data-media-picker-target="modal" class="fixed inset-0 z-50 hidden">
        <div class="absolute inset-0 bg-black/40" data-action="click->media-picker#close"></div>
        <div class="relative mx-auto mt-16 w-full max-w-4xl rounded-3xl bg-white p-6 shadow-xl">
          <div class="flex items-center justify-between gap-3">
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Vybrat video</h3>
              <p class="text-sm text-gray-600">Hledejte podle názvu.</p>
            </div>
            <button type="button" data-action="media-picker#close" class="rounded-xl border border-gray-300 bg-white px-3 py-2 text-sm font-medium text-gray-900 hover:bg-gray-50">Zavřít</button>
          </div>

          <div class="mt-4">
            <input type="text"
                   placeholder="Hledat video..."
                   data-media-picker-target="filter"
                   data-action="input->media-picker#filter"
                   class="w-full rounded-2xl border border-gray-300 bg-white px-4 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" />
          </div>

          <div class="mt-5 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
            <% @video_assets.each do |asset| %>
              <button type="button"
                      data-media-picker-target="item"
                      data-id="<%= asset.id %>"
                      data-title="<%= asset.title %>"
                      data-url="<%= rails_blob_path(asset.file, disposition: "inline") %>"
                      data-action="media-picker#select"
                      class="group flex flex-col overflow-hidden rounded-2xl border border-gray-200 bg-white text-left shadow-sm hover:border-gray-300">
                <div class="h-32 w-full overflow-hidden bg-gray-100">
                  <% preview = (asset.file.preview(resize_to_fill: [480, 270]).processed rescue nil) %>
                  <% if preview %>
                    <%= image_tag preview, class: "h-full w-full object-cover" %>
                  <% else %>
                    <div class="flex h-full w-full items-center justify-center text-xs font-semibold text-gray-500">VIDEO</div>
                  <% end %>
                </div>
                <div class="p-3">
                  <div class="truncate text-sm font-semibold text-gray-900 group-hover:underline"><%= asset.title %></div>
                  <div class="mt-1 text-xs text-gray-500"><%= asset.file.filename.to_s %></div>
                </div>
              </button>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="flex flex-col gap-2" data-controller="media-picker">
      <%= f.label :cover_asset_id, "Náhled z knihovny (volitelné)", class: "text-sm font-medium text-gray-900" %>
      <div class="flex items-center justify-between gap-3 rounded-2xl border border-gray-200 bg-white px-4 py-3 text-sm">
        <div class="min-w-0">
          <% if segment.cover_asset.present? %>
            <div class="text-xs text-gray-500">Vybraný obrázek</div>
            <%= link_to segment.cover_asset.title,
                        rails_blob_path(segment.cover_asset.file, disposition: "inline"),
                        class: "truncate font-medium text-gray-900 hover:underline",
                        target: "_blank",
                        rel: "noopener",
                        data: { media_picker_target: "selectedLink" } %>
          <% else %>
            <div class="text-xs text-gray-500">Vybraný obrázek</div>
            <div class="text-sm text-gray-600" data-media-picker-target="selectedEmpty">Zatím nevybráno</div>
            <a href="#" class="hidden" data-media-picker-target="selectedLink"></a>
          <% end %>
        </div>
        <div class="flex items-center gap-2">
          <button type="button" data-action="media-picker#open" class="rounded-xl border border-gray-300 bg-white px-3 py-2 text-xs font-medium text-gray-900 hover:bg-gray-50">Vybrat</button>
          <button type="button" data-action="media-picker#clear" class="rounded-xl border border-gray-200 bg-gray-50 px-3 py-2 text-xs font-medium text-gray-700 hover:bg-gray-100 <%= segment.cover_asset.present? ? "" : "hidden" %>" data-media-picker-target="clear">Odebrat</button>
        </div>
      </div>
      <%= f.hidden_field :cover_asset_id, data: { media_picker_target: "input" } %>

      <div data-media-picker-target="modal" class="fixed inset-0 z-50 hidden">
        <div class="absolute inset-0 bg-black/40" data-action="click->media-picker#close"></div>
        <div class="relative mx-auto mt-16 w-full max-w-4xl rounded-3xl bg-white p-6 shadow-xl">
          <div class="flex items-center justify-between gap-3">
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Vybrat obrázek</h3>
              <p class="text-sm text-gray-600">Hledejte podle názvu.</p>
            </div>
            <button type="button" data-action="media-picker#close" class="rounded-xl border border-gray-300 bg-white px-3 py-2 text-sm font-medium text-gray-900 hover:bg-gray-50">Zavřít</button>
          </div>

          <div class="mt-4">
            <input type="text"
                   placeholder="Hledat obrázek..."
                   data-media-picker-target="filter"
                   data-action="input->media-picker#filter"
                   class="w-full rounded-2xl border border-gray-300 bg-white px-4 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" />
          </div>

          <div class="mt-5 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
            <% @image_assets.each do |asset| %>
              <button type="button"
                      data-media-picker-target="item"
                      data-id="<%= asset.id %>"
                      data-title="<%= asset.title %>"
                      data-url="<%= rails_blob_path(asset.file, disposition: "inline") %>"
                      data-action="media-picker#select"
                      class="group flex flex-col overflow-hidden rounded-2xl border border-gray-200 bg-white text-left shadow-sm hover:border-gray-300">
                <div class="h-32 w-full overflow-hidden bg-gray-100">
                  <% thumb = (asset.file.variant(resize_to_fill: [480, 270]).processed rescue nil) %>
                  <% if thumb %>
                    <%= image_tag thumb, class: "h-full w-full object-cover" %>
                  <% else %>
                    <div class="flex h-full w-full items-center justify-center text-xs font-semibold text-gray-500">IMG</div>
                  <% end %>
                </div>
                <div class="p-3">
                  <div class="truncate text-sm font-semibold text-gray-900 group-hover:underline"><%= asset.title %></div>
                  <div class="mt-1 text-xs text-gray-500"><%= asset.file.filename.to_s %></div>
                </div>
              </button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-4 md:grid-cols-4">
    <div class="flex flex-col gap-2">
      <%= f.label :cover_image, "Náhled (obrázek, volitelné)", class: "text-sm font-medium text-gray-900" %>
      <div data-controller="dropzone" class="rounded-2xl border border-gray-200 bg-white p-4 shadow-sm">
        <%= f.file_field :cover_image,
                         direct_upload: true,
                         accept: "image/*",
                         data: { dropzone_target: "input", action: "change->dropzone#changed" },
                         class: "sr-only" %>
        <div
          data-dropzone-target="area"
          data-action="click->dropzone#open dragenter->dropzone#dragOver dragover->dropzone#dragOver dragleave->dropzone#dragLeave drop->dropzone#drop"
          class="cursor-pointer rounded-2xl border border-dashed border-gray-300 bg-gray-50 px-4 py-6 text-center text-sm text-gray-700 hover:border-gray-400"
        >
          <div class="font-medium text-gray-900">Přetáhněte obrázek sem</div>
          <div class="mt-1 text-xs text-gray-600">
            Doporučeno 16:9 (např. 1280x720 nebo 1600x900), JPG/WebP, ideálně do 1 MB;
            <button type="button" data-action="click->dropzone#open" class="font-medium text-gray-900 underline underline-offset-2">přidat soubor</button>
          </div>
          <pre data-dropzone-target="files" class="mt-3 whitespace-pre-line text-xs text-gray-600"></pre>
        </div>
        <div data-dropzone-target="progress" class="mt-3 space-y-2"></div>
      </div>

      <% if segment.cover_asset.present? %>
        <div class="flex items-center gap-3 text-xs text-gray-600">
          <div class="min-w-0">
            Z knihovny:
            <%= link_to segment.cover_asset.title,
                        rails_blob_path(segment.cover_asset.file, disposition: "inline"),
                        class: "truncate font-medium text-gray-900 hover:underline",
                        target: "_blank",
                        rel: "noopener" %>
          </div>
        </div>
      <% end %>

      <% if segment.cover_image.attached? %>
        <div class="flex items-center justify-between gap-3 text-xs text-gray-600">
          <%= link_to segment.cover_image.filename.to_s, rails_blob_path(segment.cover_image, disposition: "inline"), class: "truncate font-medium text-gray-900 hover:underline", target: "_blank", rel: "noopener" %>
          <%= link_to "Smazat",
                      destroy_cover_image_admin_course_chapter_segment_path(course, chapter, segment),
                      data: { turbo_method: :delete, turbo_confirm: "Smazat náhled?" },
                      class: "rounded-lg border border-rose-200 bg-rose-50 px-2.5 py-1 text-xs font-medium text-rose-900 hover:bg-rose-100" %>
        </div>
        <div class="overflow-hidden rounded-2xl border border-gray-200 bg-white">
          <%= image_tag rails_blob_path(segment.cover_image, disposition: "inline"), class: "h-28 w-full object-cover" %>
        </div>
      <% end %>
    </div>

    <div class="flex flex-col gap-2">
      <%= f.label :video, "Video (MP4, volitelné)", class: "text-sm font-medium text-gray-900" %>
      <div data-controller="dropzone" class="rounded-2xl border border-gray-200 bg-white p-4 shadow-sm">
        <%= f.file_field :video,
                         direct_upload: true,
                         accept: "video/mp4",
                         data: { dropzone_target: "input", action: "change->dropzone#changed" },
                         class: "sr-only" %>
        <div
          data-dropzone-target="area"
          data-action="click->dropzone#open dragenter->dropzone#dragOver dragover->dropzone#dragOver dragleave->dropzone#dragLeave drop->dropzone#drop"
          class="cursor-pointer rounded-2xl border border-dashed border-gray-300 bg-gray-50 px-4 py-6 text-center text-sm text-gray-700 hover:border-gray-400"
        >
          <div class="font-medium text-gray-900">Přetáhněte MP4 sem</div>
          <div class="mt-1 text-xs text-gray-600">
            Doporučeno 720p, H.264 + AAC, 30fps, +faststart (rychlý start);
            <button type="button" data-action="click->dropzone#open" class="font-medium text-gray-900 underline underline-offset-2">přidat soubor</button>
          </div>
          <pre data-dropzone-target="files" class="mt-3 whitespace-pre-line text-xs text-gray-600"></pre>
        </div>
        <div data-dropzone-target="progress" class="mt-3 space-y-2"></div>
      </div>

      <% if segment.video_asset.present? %>
        <div class="flex items-center gap-3 text-xs text-gray-600">
          <div class="min-w-0">
            Z knihovny:
            <%= link_to segment.video_asset.title,
                        rails_blob_path(segment.video_asset.file, disposition: "inline"),
                        class: "truncate font-medium text-gray-900 hover:underline",
                        target: "_blank",
                        rel: "noopener" %>
          </div>
        </div>
      <% end %>

      <% if segment.video.attached? %>
        <div class="flex items-center justify-between gap-3 text-xs text-gray-600">
          <div class="min-w-0">
            Aktuální:
            <%= link_to segment.video.filename.to_s, rails_blob_path(segment.video, disposition: "inline"), class: "truncate font-medium text-gray-900 hover:underline", target: "_blank", rel: "noopener" %>
          </div>
          <%= link_to "Smazat",
                      destroy_video_admin_course_chapter_segment_path(course, chapter, segment),
                      data: { turbo_method: :delete, turbo_confirm: "Smazat video?" },
                      class: "shrink-0 rounded-lg border border-rose-200 bg-rose-50 px-2.5 py-1 text-xs font-medium text-rose-900 hover:bg-rose-100" %>
        </div>
      <% end %>
    </div>

    <div class="flex flex-col gap-2">
      <%= f.label :audio, "Audio (MP3, max 500 MB, volitelné)", class: "text-sm font-medium text-gray-900" %>
      <div data-controller="dropzone" class="rounded-2xl border border-gray-200 bg-white p-4 shadow-sm">
        <%= f.file_field :audio,
                         direct_upload: true,
                         accept: "audio/mpeg",
                         data: { dropzone_target: "input", action: "change->dropzone#changed" },
                         class: "sr-only" %>
        <div
          data-dropzone-target="area"
          data-action="click->dropzone#open dragenter->dropzone#dragOver dragover->dropzone#dragOver dragleave->dropzone#dragLeave drop->dropzone#drop"
          class="cursor-pointer rounded-2xl border border-dashed border-gray-300 bg-gray-50 px-4 py-6 text-center text-sm text-gray-700 hover:border-gray-400"
        >
          <div class="font-medium text-gray-900">Přetáhněte MP3 sem</div>
          <div class="mt-1 text-xs text-gray-600">
            MP3 soubor, max 500 MB;
            <button type="button" data-action="click->dropzone#open" class="font-medium text-gray-900 underline underline-offset-2">přidat soubor</button>
          </div>
          <pre data-dropzone-target="files" class="mt-3 whitespace-pre-line text-xs text-gray-600"></pre>
        </div>
        <div data-dropzone-target="progress" class="mt-3 space-y-2"></div>
      </div>

      <% if segment.audio.attached? %>
        <div class="flex items-center justify-between gap-3 text-xs text-gray-600">
          <div class="min-w-0">
            Aktuální:
            <%= link_to segment.audio.filename.to_s, rails_blob_path(segment.audio, disposition: "inline"), class: "truncate font-medium text-gray-900 hover:underline", target: "_blank", rel: "noopener" %>
          </div>
          <%= link_to "Smazat",
                      destroy_audio_admin_course_chapter_segment_path(course, chapter, segment),
                      data: { turbo_method: :delete, turbo_confirm: "Smazat audio?" },
                      class: "shrink-0 rounded-lg border border-rose-200 bg-rose-50 px-2.5 py-1 text-xs font-medium text-rose-900 hover:bg-rose-100" %>
        </div>
      <% end %>
    </div>

    <div class="flex flex-col gap-2">
      <%= f.label :attachments, "Přílohy (PDF nebo obrázek, max 10 MB/soubor, volitelné)", class: "text-sm font-medium text-gray-900" %>
      <div data-controller="dropzone" class="rounded-2xl border border-gray-200 bg-white p-4 shadow-sm">
        <%= f.file_field :attachments,
                         direct_upload: true,
                         multiple: true,
                         accept: "application/pdf,image/*",
                         data: { dropzone_target: "input", action: "change->dropzone#changed" },
                         class: "sr-only" %>
        <div
          data-dropzone-target="area"
          data-action="click->dropzone#open dragenter->dropzone#dragOver dragover->dropzone#dragOver dragleave->dropzone#dragLeave drop->dropzone#drop"
          class="cursor-pointer rounded-2xl border border-dashed border-gray-300 bg-gray-50 px-4 py-6 text-center text-sm text-gray-700 hover:border-gray-400"
        >
          <div class="font-medium text-gray-900">Přetáhněte přílohy sem</div>
          <div class="mt-1 text-xs text-gray-600">
            PDF (ideálně optimalizované pro web) nebo obrázky; max 10 MB/soubor;
            <button type="button" data-action="click->dropzone#open" class="font-medium text-gray-900 underline underline-offset-2">přidat soubory</button>
          </div>
          <pre data-dropzone-target="files" class="mt-3 whitespace-pre-line text-xs text-gray-600"></pre>
        </div>
        <div data-dropzone-target="progress" class="mt-3 space-y-2"></div>
      </div>

      <% if segment.attachments.attached? %>
        <div class="mt-1 space-y-2 text-xs text-gray-700">
          <% segment.attachments.attachments.each do |att| %>
            <div class="flex items-center justify-between gap-3 rounded-xl border border-gray-200 bg-white px-3 py-2">
              <div class="flex min-w-0 items-center gap-3">
                <% if att.blob.content_type&.start_with?("image/") %>
                  <% thumb = (att.variant(resize_to_fill: [40, 40]).processed rescue nil) %>
                  <% if thumb %>
                    <%= image_tag thumb, class: "h-10 w-10 rounded-lg border border-gray-200 object-cover" %>
                  <% else %>
                    <div class="flex h-10 w-10 items-center justify-center rounded-lg border border-gray-200 bg-gray-50 text-[10px] font-semibold text-gray-600">IMG</div>
                  <% end %>
                <% else %>
                  <div class="flex h-10 w-10 items-center justify-center rounded-lg border border-gray-200 bg-gray-50 text-[10px] font-semibold text-gray-600">PDF</div>
                <% end %>
                <%= link_to att.filename.to_s, rails_blob_path(att, disposition: "inline"), class: "min-w-0 truncate font-medium text-gray-900 hover:underline", target: "_blank", rel: "noopener" %>
              </div>
              <%= link_to "Smazat",
                          destroy_attachment_admin_course_chapter_segment_path(course, chapter, segment, attachment_id: att.id),
                          data: { turbo_method: :delete, turbo_confirm: "Smazat přílohu #{att.filename}?" },
                          class: "shrink-0 rounded-lg border border-rose-200 bg-rose-50 px-2.5 py-1 text-xs font-medium text-rose-900 hover:bg-rose-100" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex items-center gap-3">
    <%= f.submit class: "inline-flex items-center justify-center rounded-2xl bg-gray-900 px-4 py-2.5 text-sm font-medium text-white hover:bg-black" %>
    <%= link_to "Zpět", admin_course_path(course), class: "inline-flex items-center justify-center rounded-2xl border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
  </div>
<% end %>
