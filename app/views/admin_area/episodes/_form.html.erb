<%= form_with model: [:admin, subscription_plan, episode], class: "flex flex-col gap-5" do |f| %>
  <% if episode.errors.any? %>
    <div class="rounded-2xl border border-rose-200 bg-rose-50 p-4 text-sm text-rose-900">
      <div class="font-semibold">Formulář obsahuje chyby:</div>
      <ul class="mt-2 list-disc pl-5">
        <% episode.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col gap-2">
    <%= f.label :title, "Název", class: "text-sm font-medium text-gray-900" %>
    <%= f.text_field :title, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
  </div>

  <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
    <div class="flex flex-col gap-2">
      <span class="text-sm font-medium text-gray-900">Stav</span>
      <div class="flex flex-wrap gap-2">
        <% Episode::STATUSES.each do |s| %>
          <label class="cursor-pointer">
            <%= f.radio_button :status, s, class: "peer sr-only" %>
            <span class="inline-flex items-center rounded-2xl border border-gray-300 bg-white px-3.5 py-2 text-sm font-medium text-gray-700 transition hover:bg-gray-50 peer-checked:border-gray-900 peer-checked:bg-gray-900 peer-checked:text-white peer-checked:hover:bg-gray-800"><%= s %></span>
          </label>
        <% end %>
      </div>
    </div>
    <div class="flex flex-col gap-2">
      <%= f.label :published_at, "Datum publikace", class: "text-sm font-medium text-gray-900" %>
      <%= f.datetime_local_field :published_at, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
    </div>
  </div>

  <div class="flex flex-col gap-2">
    <%= f.label :content, "Obsah", class: "text-sm font-medium text-gray-900" %>
    <%= f.rich_text_area :content, placeholder: "Obsah epizody..." %>
  </div>

  <div class="flex flex-col gap-2">
    <%= f.label :cover_image, "Náhledový obrázek", class: "text-sm font-medium text-gray-900" %>
    <div data-controller="dropzone" class="rounded-2xl border border-gray-200 bg-white p-4 shadow-sm">
      <%= f.file_field :cover_image,
                       direct_upload: true,
                       accept: "image/*",
                       data: { dropzone_target: "input", action: "change->dropzone#changed" },
                       class: "sr-only" %>
      <div
        data-dropzone-target="area"
        data-action="click->dropzone#open dragenter->dropzone#dragOver dragover->dropzone#dragOver dragleave->dropzone#dragLeave drop->dropzone#drop"
        class="cursor-pointer rounded-2xl border border-dashed border-gray-300 bg-gray-50 px-4 py-6 text-center text-sm text-gray-700 hover:border-gray-400"
      >
        <div class="font-medium text-gray-900">Přetáhněte obrázek sem</div>
        <div class="mt-1 text-xs text-gray-600">
          <button type="button" data-action="click->dropzone#open" class="font-medium text-gray-900 underline underline-offset-2">přidat soubor</button>
        </div>
        <pre data-dropzone-target="files" class="mt-3 whitespace-pre-line text-xs text-gray-600"></pre>
      </div>
      <div data-dropzone-target="progress" class="mt-3 space-y-2"></div>
    </div>

    <% if episode.cover_image.attached? %>
      <div class="flex items-center justify-between gap-3 text-xs text-gray-600">
        <%= link_to episode.cover_image.filename.to_s, rails_blob_path(episode.cover_image, disposition: "inline"), class: "truncate font-medium text-gray-900 hover:underline", target: "_blank", rel: "noopener" %>
        <%= link_to "Smazat",
                    destroy_cover_image_admin_subscription_plan_episode_path(subscription_plan, episode),
                    data: { turbo_method: :delete, turbo_confirm: "Smazat náhled?" },
                    class: "shrink-0 rounded-lg border border-rose-200 bg-rose-50 px-2.5 py-1 text-xs font-medium text-rose-900 hover:bg-rose-100" %>
      </div>
    <% end %>
  </div>

  <% if episode.media.attached? %>
    <div class="flex flex-col gap-2">
      <span class="text-sm font-medium text-gray-900">Médium (starší formát)</span>
      <div class="flex items-center justify-between gap-3 rounded-2xl border border-gray-200 bg-white px-4 py-3 text-xs text-gray-600">
        <span class="truncate font-medium text-gray-900"><%= episode.media.filename %></span>
        <%= link_to "Smazat",
                    destroy_media_admin_subscription_plan_episode_path(subscription_plan, episode),
                    data: { turbo_method: :delete, turbo_confirm: "Smazat médium?" },
                    class: "shrink-0 rounded-lg border border-rose-200 bg-rose-50 px-2.5 py-1 text-xs font-medium text-rose-900 hover:bg-rose-100" %>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
    <div class="flex flex-col gap-2">
      <%= f.label :video, "Video (MP4, max 5 GB, volitelné)", class: "text-sm font-medium text-gray-900" %>
      <div data-controller="dropzone" class="rounded-2xl border border-gray-200 bg-white p-4 shadow-sm">
        <%= f.file_field :video,
                         direct_upload: true,
                         accept: "video/mp4",
                         data: { dropzone_target: "input", action: "change->dropzone#changed" },
                         class: "sr-only" %>
        <div
          data-dropzone-target="area"
          data-action="click->dropzone#open dragenter->dropzone#dragOver dragover->dropzone#dragOver dragleave->dropzone#dragLeave drop->dropzone#drop"
          class="cursor-pointer rounded-2xl border border-dashed border-gray-300 bg-gray-50 px-4 py-6 text-center text-sm text-gray-700 hover:border-gray-400"
        >
          <div class="font-medium text-gray-900">Přetáhněte MP4 sem</div>
          <div class="mt-1 text-xs text-gray-600">
            MP4 video, max 5 GB;
            <button type="button" data-action="click->dropzone#open" class="font-medium text-gray-900 underline underline-offset-2">přidat soubor</button>
          </div>
          <pre data-dropzone-target="files" class="mt-3 whitespace-pre-line text-xs text-gray-600"></pre>
        </div>
        <div data-dropzone-target="progress" class="mt-3 space-y-2"></div>
      </div>

      <% if episode.video.attached? %>
        <div class="flex items-center justify-between gap-3 text-xs text-gray-600">
          <div class="min-w-0">
            Aktuální:
            <%= link_to episode.video.filename.to_s, rails_blob_path(episode.video, disposition: "inline"), class: "truncate font-medium text-gray-900 hover:underline", target: "_blank", rel: "noopener" %>
          </div>
          <%= link_to "Smazat",
                      destroy_video_admin_subscription_plan_episode_path(subscription_plan, episode),
                      data: { turbo_method: :delete, turbo_confirm: "Smazat video?" },
                      class: "shrink-0 rounded-lg border border-rose-200 bg-rose-50 px-2.5 py-1 text-xs font-medium text-rose-900 hover:bg-rose-100" %>
        </div>
      <% end %>
    </div>

    <div class="flex flex-col gap-2">
      <%= f.label :audio, "Audio (MP3, max 500 MB, volitelné)", class: "text-sm font-medium text-gray-900" %>
      <div data-controller="dropzone" class="rounded-2xl border border-gray-200 bg-white p-4 shadow-sm">
        <%= f.file_field :audio,
                         direct_upload: true,
                         accept: "audio/mpeg",
                         data: { dropzone_target: "input", action: "change->dropzone#changed" },
                         class: "sr-only" %>
        <div
          data-dropzone-target="area"
          data-action="click->dropzone#open dragenter->dropzone#dragOver dragover->dropzone#dragOver dragleave->dropzone#dragLeave drop->dropzone#drop"
          class="cursor-pointer rounded-2xl border border-dashed border-gray-300 bg-gray-50 px-4 py-6 text-center text-sm text-gray-700 hover:border-gray-400"
        >
          <div class="font-medium text-gray-900">Přetáhněte MP3 sem</div>
          <div class="mt-1 text-xs text-gray-600">
            MP3 soubor, max 500 MB;
            <button type="button" data-action="click->dropzone#open" class="font-medium text-gray-900 underline underline-offset-2">přidat soubor</button>
          </div>
          <pre data-dropzone-target="files" class="mt-3 whitespace-pre-line text-xs text-gray-600"></pre>
        </div>
        <div data-dropzone-target="progress" class="mt-3 space-y-2"></div>
      </div>

      <% if episode.audio.attached? %>
        <div class="flex items-center justify-between gap-3 text-xs text-gray-600">
          <div class="min-w-0">
            Aktuální:
            <%= link_to episode.audio.filename.to_s, rails_blob_path(episode.audio, disposition: "inline"), class: "truncate font-medium text-gray-900 hover:underline", target: "_blank", rel: "noopener" %>
          </div>
          <%= link_to "Smazat",
                      destroy_audio_admin_subscription_plan_episode_path(subscription_plan, episode),
                      data: { turbo_method: :delete, turbo_confirm: "Smazat audio?" },
                      class: "shrink-0 rounded-lg border border-rose-200 bg-rose-50 px-2.5 py-1 text-xs font-medium text-rose-900 hover:bg-rose-100" %>
        </div>
      <% end %>
    </div>

    <div class="flex flex-col gap-2">
      <%= f.label :attachments, "Přílohy (PDF nebo obrázek, max 10 MB/soubor, volitelné)", class: "text-sm font-medium text-gray-900" %>
      <div data-controller="dropzone" class="rounded-2xl border border-gray-200 bg-white p-4 shadow-sm">
        <%= f.file_field :attachments,
                         direct_upload: true,
                         multiple: true,
                         accept: "application/pdf,image/*",
                         data: { dropzone_target: "input", action: "change->dropzone#changed" },
                         class: "sr-only" %>
        <div
          data-dropzone-target="area"
          data-action="click->dropzone#open dragenter->dropzone#dragOver dragover->dropzone#dragOver dragleave->dropzone#dragLeave drop->dropzone#drop"
          class="cursor-pointer rounded-2xl border border-dashed border-gray-300 bg-gray-50 px-4 py-6 text-center text-sm text-gray-700 hover:border-gray-400"
        >
          <div class="font-medium text-gray-900">Přetáhněte přílohy sem</div>
          <div class="mt-1 text-xs text-gray-600">
            PDF nebo obrázky; max 10 MB/soubor;
            <button type="button" data-action="click->dropzone#open" class="font-medium text-gray-900 underline underline-offset-2">přidat soubory</button>
          </div>
          <pre data-dropzone-target="files" class="mt-3 whitespace-pre-line text-xs text-gray-600"></pre>
        </div>
        <div data-dropzone-target="progress" class="mt-3 space-y-2"></div>
      </div>

      <% if episode.attachments.attached? %>
        <div class="mt-1 space-y-2 text-xs text-gray-700">
          <% episode.attachments.attachments.each do |att| %>
            <div class="flex items-center justify-between gap-3 rounded-xl border border-gray-200 bg-white px-3 py-2">
              <div class="flex min-w-0 items-center gap-3">
                <% if att.blob.content_type&.start_with?("image/") %>
                  <% thumb = (att.variant(resize_to_fill: [40, 40]).processed rescue nil) %>
                  <% if thumb %>
                    <%= image_tag thumb, class: "h-10 w-10 rounded-lg border border-gray-200 object-cover" %>
                  <% else %>
                    <div class="flex h-10 w-10 items-center justify-center rounded-lg border border-gray-200 bg-gray-50 text-[10px] font-semibold text-gray-600">IMG</div>
                  <% end %>
                <% else %>
                  <div class="flex h-10 w-10 items-center justify-center rounded-lg border border-gray-200 bg-gray-50 text-[10px] font-semibold text-gray-600">PDF</div>
                <% end %>
                <%= link_to att.filename.to_s, rails_blob_path(att, disposition: "inline"), class: "min-w-0 truncate font-medium text-gray-900 hover:underline", target: "_blank", rel: "noopener" %>
              </div>
              <%= link_to "Smazat",
                          destroy_attachment_admin_subscription_plan_episode_path(subscription_plan, episode, attachment_id: att.id),
                          data: { turbo_method: :delete, turbo_confirm: "Smazat přílohu #{att.filename}?" },
                          class: "shrink-0 rounded-lg border border-rose-200 bg-rose-50 px-2.5 py-1 text-xs font-medium text-rose-900 hover:bg-rose-100" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex items-center gap-3">
    <%= f.submit class: "inline-flex items-center justify-center rounded-2xl bg-gray-900 px-4 py-2.5 text-sm font-medium text-white hover:bg-black" %>
    <%= link_to "Zpět", admin_subscription_plan_path(subscription_plan), class: "inline-flex items-center justify-center rounded-2xl border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
  </div>
<% end %>
