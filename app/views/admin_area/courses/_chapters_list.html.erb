<div id="course_chapters">
  <% if course.chapters.any? %>
    <div class="mt-5 space-y-4">
      <% course.chapters.each do |chapter| %>
        <div class="rounded-2xl border border-gray-200 bg-gray-50 p-4">
          <div class="flex flex-col gap-3 sm:flex-row sm:items-start sm:justify-between">
            <div class="flex flex-col gap-1">
              <div class="flex items-center gap-2">
                <span class="inline-flex rounded-full bg-white px-2.5 py-1 text-xs font-semibold text-gray-700 ring-1 ring-gray-200">#<%= chapter.position %></span>
                <h3 class="text-base font-semibold tracking-tight text-gray-900"><%= chapter.title %></h3>
                <% if chapter.is_mandatory? %>
                  <span class="inline-flex rounded-full border border-emerald-200 bg-emerald-50 px-2.5 py-1 text-xs font-medium text-emerald-900">povinná</span>
                <% end %>
              </div>
            </div>

            <div class="flex flex-wrap items-center gap-2">
              <div class="flex items-center gap-0.5">
                <%= button_to move_up_admin_course_chapter_path(course, chapter), method: :patch, class: "rounded-lg border border-gray-300 bg-white p-1.5 text-gray-600 hover:bg-gray-50 hover:text-gray-900", title: "Nahoru" do %>
                  <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M14.77 12.79a.75.75 0 0 1-1.06-.02L10 8.832l-3.71 3.938a.75.75 0 1 1-1.08-1.04l4.24-4.5a.75.75 0 0 1 1.1 0l4.24 4.5a.75.75 0 0 1-.02 1.06Z" clip-rule="evenodd" /></svg>
                <% end %>
                <%= button_to move_down_admin_course_chapter_path(course, chapter), method: :patch, class: "rounded-lg border border-gray-300 bg-white p-1.5 text-gray-600 hover:bg-gray-50 hover:text-gray-900", title: "Dolů" do %>
                  <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 0 1 1.06.02L10 11.168l3.71-3.938a.75.75 0 1 1 1.08 1.04l-4.24 4.5a.75.75 0 0 1-1.1 0l-4.24-4.5a.75.75 0 0 1 .02-1.06Z" clip-rule="evenodd" /></svg>
                <% end %>
              </div>
              <%= link_to "Nový segment", new_admin_course_chapter_segment_path(course, chapter), class: "rounded-xl bg-gray-900 px-3 py-2 text-sm font-medium text-white hover:bg-black" %>
              <%= link_to "Upravit", edit_admin_course_chapter_path(course, chapter), class: "rounded-xl border border-gray-300 bg-white px-3 py-2 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
              <%= button_to "Smazat", admin_course_chapter_path(course, chapter), method: :delete, data: { turbo_confirm: "Smazat kapitolu i se segmenty?" }, class: "rounded-xl border border-rose-200 bg-rose-50 px-3 py-2 text-sm font-medium text-rose-900 hover:bg-rose-100" %>
            </div>
          </div>

          <% if chapter.segments.any? %>
            <div class="mt-4 overflow-hidden rounded-2xl border border-gray-200 bg-white">
              <div class="divide-y divide-gray-100">
                <% chapter.segments.each do |segment| %>
                  <div class="flex flex-col gap-3 px-4 py-3 sm:flex-row sm:items-center sm:justify-between">
                    <div class="flex items-center gap-2">
                      <span class="inline-flex rounded-full bg-gray-100 px-2.5 py-1 text-xs font-semibold text-gray-700">#<%= segment.position %></span>
                      <span class="text-sm font-medium text-gray-900"><%= segment.title %></span>
                      <% if segment.is_free_preview? %>
                        <span class="inline-flex rounded-full border border-emerald-200 bg-emerald-50 px-2 py-0.5 text-[10px] font-semibold text-emerald-800">Zdarma</span>
                      <% end %>
                      <% if segment.attachments.attached? %>
                        <span class="inline-flex items-center" title="Má přílohy">
                          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" class="h-4 w-4 text-gray-400" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M18.375 12.739V7.5a4.125 4.125 0 0 0-8.25 0v8.625a2.625 2.625 0 0 0 5.25 0V8.625a1.125 1.125 0 0 0-2.25 0v7.5" />
                          </svg>
                        </span>
                      <% end %>
                      <% if segment.cover_image_attached? %>
                        <span class="inline-flex items-center" title="Má náhled">
                          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" class="h-4 w-4 text-gray-400" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75V6A2.25 2.25 0 0 1 4.5 3.75h15A2.25 2.25 0 0 1 21.75 6v9.75A2.25 2.25 0 0 1 19.5 18H4.5A2.25 2.25 0 0 1 2.25 15.75Z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 14.25 7.5 11.25l3 3 4.5-4.5 4.5 4.5" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 8.25h.01" />
                          </svg>
                        </span>
                      <% end %>
                      <% if segment.video_attached? %>
                        <span class="inline-flex items-center" title="Má video">
                          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" class="h-4 w-4 text-gray-400" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5 19.5 8.25v7.5l-3.75-2.25" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 6.75h9A2.25 2.25 0 0 1 15.75 9v6A2.25 2.25 0 0 1 13.5 17.25h-9A2.25 2.25 0 0 1 2.25 15V9A2.25 2.25 0 0 1 4.5 6.75Z" />
                          </svg>
                        </span>
                      <% end %>
                      <% if segment.audio.attached? || segment.audio_asset.present? %>
                        <span class="inline-flex items-center" title="Má audio">
                          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" class="h-4 w-4 text-gray-400" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 9l10.5-3v13.5" />
                            <circle cx="6.75" cy="17.25" r="2.25" />
                            <circle cx="17.25" cy="15.75" r="2.25" />
                          </svg>
                        </span>
                      <% end %>
                    </div>
                    <div class="flex flex-wrap items-center gap-2">
                      <div class="flex items-center gap-0.5">
                        <%= button_to move_up_admin_course_chapter_segment_path(course, chapter, segment), method: :patch, class: "rounded-lg border border-gray-300 bg-white p-1.5 text-gray-600 hover:bg-gray-50 hover:text-gray-900", title: "Nahoru" do %>
                          <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M14.77 12.79a.75.75 0 0 1-1.06-.02L10 8.832l-3.71 3.938a.75.75 0 1 1-1.08-1.04l4.24-4.5a.75.75 0 0 1 1.1 0l4.24 4.5a.75.75 0 0 1-.02 1.06Z" clip-rule="evenodd" /></svg>
                        <% end %>
                        <%= button_to move_down_admin_course_chapter_segment_path(course, chapter, segment), method: :patch, class: "rounded-lg border border-gray-300 bg-white p-1.5 text-gray-600 hover:bg-gray-50 hover:text-gray-900", title: "Dolů" do %>
                          <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 0 1 1.06.02L10 11.168l3.71-3.938a.75.75 0 1 1 1.08 1.04l-4.24 4.5a.75.75 0 0 1-1.1 0l-4.24-4.5a.75.75 0 0 1 .02-1.06Z" clip-rule="evenodd" /></svg>
                        <% end %>
                      </div>
                      <%= link_to "Náhled",
                                  admin_preview_course_chapter_segment_path(course, chapter, segment),
                                  class: "rounded-xl bg-gray-900 px-3 py-2 text-sm font-medium text-white hover:bg-black",
                                  target: "_blank",
                                  rel: "noopener" %>
                      <%= link_to "Upravit", edit_admin_course_chapter_segment_path(course, chapter, segment), class: "rounded-xl border border-gray-300 bg-white px-3 py-2 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
                      <%= button_to "Smazat", admin_course_chapter_segment_path(course, chapter, segment), method: :delete, data: { turbo_confirm: "Smazat segment?" }, class: "rounded-xl border border-rose-200 bg-rose-50 px-3 py-2 text-sm font-medium text-rose-900 hover:bg-rose-100" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="mt-4 rounded-xl border border-dashed border-gray-300 bg-white p-4 text-sm text-gray-700">
              Zatím žádné segmenty. Vytvořte první.
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="mt-5 rounded-2xl border border-dashed border-gray-300 bg-gray-50 p-8 text-sm text-gray-700">
      Zatím žádný obsah. Vytvořte první kapitolu.
    </div>
  <% end %>
</div>
