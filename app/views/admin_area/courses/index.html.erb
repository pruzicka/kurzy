<div class="flex items-end justify-between gap-4">
  <div class="flex flex-col gap-1">
    <h1 class="text-3xl font-semibold tracking-tight text-gray-900">Kurzy</h1>
    <p class="text-sm text-gray-600">Sprava kurzu a obsahu.</p>
  </div>
  <%= link_to "Novy kurz", new_admin_course_path, class: "inline-flex items-center justify-center rounded-2xl bg-gray-900 px-4 py-2.5 text-sm font-medium text-white hover:bg-black" %>
</div>

<div class="mt-6 overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-sm">
  <div class="grid grid-cols-12 gap-0 border-b border-gray-200 bg-gray-50 px-4 py-3 text-xs font-semibold uppercase tracking-wide text-gray-600">
    <div class="col-span-5">Nazev</div>
    <div class="col-span-2">Stav</div>
    <div class="col-span-2 text-right">Cena</div>
    <div class="col-span-3 text-right">Akce</div>
  </div>

  <% if @courses.any? %>
    <div class="divide-y divide-gray-100">
      <% @courses.each do |course| %>
        <div class="grid grid-cols-12 items-center gap-0 px-4 py-4">
          <div class="col-span-5">
            <div class="flex items-center gap-3">
              <% if course.cover_image.attached? %>
                <% thumb = (course.cover_image.variant(resize_to_fill: [64, 36]).processed rescue nil) %>
                <% if thumb %>
                  <%= image_tag thumb, class: "h-9 w-16 rounded-xl border border-gray-200 object-cover bg-white" %>
                <% else %>
                  <%= image_tag rails_blob_path(course.cover_image, disposition: "inline"), class: "h-9 w-16 rounded-xl border border-gray-200 object-cover bg-white" %>
                <% end %>
              <% else %>
                <div class="flex h-9 w-16 items-center justify-center rounded-xl border border-dashed border-gray-300 bg-gray-50 text-[10px] font-semibold text-gray-500">NO IMG</div>
              <% end %>
              <div class="min-w-0">
                <div class="truncate font-medium text-gray-900"><%= course.name %></div>
                <div class="mt-0.5 text-xs text-gray-600">
                  <span class="font-medium">ID:</span> <%= course.id %>
                  <% if course.slug.present? %>
                    <span class="mx-2 text-gray-300">/</span>
                    <span class="font-medium">slug:</span> <%= course.slug %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

          <div class="col-span-2">
            <% badge =
              case course.status
              when "public" then "bg-emerald-50 text-emerald-900 border-emerald-200"
              when "draft" then "bg-amber-50 text-amber-900 border-amber-200"
              else "bg-gray-100 text-gray-700 border-gray-200"
              end
            %>
            <span class="inline-flex rounded-full border px-2.5 py-1 text-xs font-medium <%= badge %>"><%= course.status %></span>
          </div>

          <div class="col-span-2 text-right text-sm font-medium text-gray-900">
            <%= number_to_currency(course.price, unit: course.currency, precision: 0) %>
          </div>

          <div class="col-span-3 flex justify-end gap-2">
            <%= link_to "Detail", admin_course_path(course), class: "rounded-xl border border-gray-300 bg-white px-3 py-2 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
            <%= link_to "Upravit", edit_admin_course_path(course), class: "rounded-xl border border-gray-300 bg-white px-3 py-2 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
            <%= button_to "Smazat", admin_course_path(course), method: :delete, data: { turbo_confirm: "Opravdu smazat kurz?" }, class: "rounded-xl border border-rose-200 bg-rose-50 px-3 py-2 text-sm font-medium text-rose-900 hover:bg-rose-100" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="p-8 text-sm text-gray-700">Zatim tu nejsou zadne kurzy. Vytvor prvni.</div>
  <% end %>
</div>
