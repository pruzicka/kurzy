<div class="flex items-end justify-between gap-4">
  <div class="flex flex-col gap-1">
    <h1 class="text-3xl font-semibold tracking-tight text-gray-900">Upravit kurz</h1>
    <p class="text-sm text-gray-600"><%= @course.name %></p>
    <% if @course.status == "public" %>
      <div class="mt-2 rounded-xl border border-amber-200 bg-amber-50 px-3 py-2 text-xs text-amber-900">
        Kurz je veřejný. Změny se projeví okamžitě.
      </div>
    <% end %>
  </div>
  <%= link_to "Detail", admin_course_path(@course), class: "inline-flex items-center justify-center rounded-2xl border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
</div>

<div class="mt-6 rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
  <%= render "form", course: @course %>
</div>
