<%= form_with model: [:admin, course], class: "flex flex-col gap-5" do |f| %>
  <% if course.errors.any? %>
    <div class="rounded-2xl border border-rose-200 bg-rose-50 p-4 text-sm text-rose-900">
      <div class="font-semibold">Formular obsahuje chyby:</div>
      <ul class="mt-2 list-disc pl-5">
        <% course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
    <div class="flex flex-col gap-2">
      <%= f.label :name, "Nazev", class: "text-sm font-medium text-gray-900" %>
      <%= f.text_field :name, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
    </div>

    <div class="flex flex-col gap-2">
      <%= f.label :status, "Stav", class: "text-sm font-medium text-gray-900" %>
      <%= f.select :status, Course::STATUSES, {}, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
    <div class="flex flex-col gap-2 md:col-span-2">
      <%= f.label :slug, "Slug (volitelne)", class: "text-sm font-medium text-gray-900" %>
      <%= f.text_field :slug, placeholder: "napr. rails-zaklady", class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
    </div>
    <div class="flex flex-col gap-2">
      <%= f.label :currency, "Mena", class: "text-sm font-medium text-gray-900" %>
      <%= f.text_field :currency, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
    <div class="flex flex-col gap-2">
      <%= f.label :price, "Cena (CZK)", class: "text-sm font-medium text-gray-900" %>
      <%= f.number_field :price, min: 0, step: 1, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
    </div>
  </div>

  <div class="flex flex-col gap-2">
    <%= f.label :description, "Popis", class: "text-sm font-medium text-gray-900" %>
    <%= f.rich_text_area :description, placeholder: "Strucny popis kurzu..." %>
  </div>

  <div class="flex flex-col gap-2">
    <%= f.label :cover_image, "Obrazek kurzu (nahled)", class: "text-sm font-medium text-gray-900" %>
    <div data-controller="dropzone" class="rounded-2xl border border-gray-200 bg-white p-4 shadow-sm">
      <%= f.file_field :cover_image,
                       direct_upload: true,
                       accept: "image/*",
                       data: { dropzone_target: "input", action: "change->dropzone#changed" },
                       class: "sr-only" %>
      <div
        data-dropzone-target="area"
        data-action="click->dropzone#open dragenter->dropzone#dragOver dragover->dropzone#dragOver dragleave->dropzone#dragLeave drop->dropzone#drop"
        class="cursor-pointer rounded-2xl border border-dashed border-gray-300 bg-gray-50 px-4 py-6 text-center text-sm text-gray-700 hover:border-gray-400"
      >
        <div class="font-medium text-gray-900">Pretahni obrazek sem</div>
        <div class="mt-1 text-xs text-gray-600">
          Doporuceno 16:9 (napr. 1600x900), JPG/WebP, idealne do 1 MB;
          <button type="button" data-action="click->dropzone#open" class="font-medium text-gray-900 underline underline-offset-2">pridat soubor</button>
        </div>
        <pre data-dropzone-target="files" class="mt-3 whitespace-pre-line text-xs text-gray-600"></pre>
      </div>
      <div data-dropzone-target="progress" class="mt-3 space-y-2"></div>
    </div>

    <% if course.cover_image.attached? %>
      <div class="flex items-center justify-between gap-3 text-xs text-gray-600">
        <%= link_to course.cover_image.filename.to_s, rails_blob_path(course.cover_image, disposition: "inline"), class: "truncate font-medium text-gray-900 hover:underline", target: "_blank", rel: "noopener" %>
        <%= link_to "Smazat",
                    cover_image_admin_course_path(course),
                    data: { turbo_method: :delete, turbo_confirm: "Smazat obrazek kurzu?" },
                    class: "shrink-0 rounded-lg border border-rose-200 bg-rose-50 px-2.5 py-1 text-xs font-medium text-rose-900 hover:bg-rose-100" %>
      </div>
      <div class="overflow-hidden rounded-2xl border border-gray-200 bg-white">
        <% thumb = (course.cover_image.variant(resize_to_fill: [1200, 675]).processed rescue nil) %>
        <% if thumb %>
          <%= image_tag thumb, class: "h-44 w-full object-cover" %>
        <% else %>
          <%= image_tag rails_blob_path(course.cover_image, disposition: "inline"), class: "h-44 w-full object-cover" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="flex items-center gap-3">
    <%= f.submit class: "inline-flex items-center justify-center rounded-2xl bg-gray-900 px-4 py-2.5 text-sm font-medium text-white hover:bg-black" %>
    <%= link_to "Zpet", admin_courses_path, class: "inline-flex items-center justify-center rounded-2xl border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
  </div>
<% end %>
