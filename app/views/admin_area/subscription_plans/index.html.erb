<div class="flex items-end justify-between gap-4">
  <div class="flex flex-col gap-1">
    <h1 class="text-3xl font-semibold tracking-tight text-gray-900">Předplatné</h1>
    <p class="text-sm text-gray-600">Správa předplatných plánů.</p>
  </div>
  <%= link_to "Nový plán", new_admin_subscription_plan_path, class: "inline-flex items-center justify-center rounded-2xl bg-gray-900 px-4 py-2.5 text-sm font-medium text-white hover:bg-black" %>
</div>

<div class="mt-6 overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-sm">
  <div class="grid grid-cols-12 gap-0 border-b border-gray-200 bg-gray-50 px-4 py-3 text-xs font-semibold uppercase tracking-wide text-gray-600">
    <div class="col-span-4">Název</div>
    <div class="col-span-2">Autor</div>
    <div class="col-span-1">Stav</div>
    <div class="col-span-2 text-right">Cena/měs</div>
    <div class="col-span-3 text-right">Akce</div>
  </div>

  <% if @subscription_plans.any? %>
    <div class="divide-y divide-gray-100">
      <% @subscription_plans.each do |plan| %>
        <div class="grid grid-cols-12 items-center gap-0 px-4 py-4">
          <div class="col-span-4">
            <div class="flex items-center gap-3">
              <% if plan.cover_image.attached? %>
                <% thumb = (plan.cover_image.variant(resize_to_fill: [64, 36]).processed rescue nil) %>
                <% if thumb %>
                  <%= image_tag thumb, class: "h-9 w-16 rounded-xl border border-gray-200 object-cover bg-white" %>
                <% else %>
                  <%= image_tag rails_blob_path(plan.cover_image, disposition: "inline"), class: "h-9 w-16 rounded-xl border border-gray-200 object-cover bg-white" %>
                <% end %>
              <% else %>
                <div class="flex h-9 w-16 items-center justify-center rounded-xl border border-dashed border-gray-300 bg-gray-50 text-[10px] font-semibold text-gray-500">NO IMG</div>
              <% end %>
              <div class="min-w-0">
                <div class="truncate font-medium text-gray-900"><%= plan.name %></div>
                <div class="mt-0.5 text-xs text-gray-600">
                  <span class="font-medium">slug:</span> <%= plan.slug %>
                </div>
              </div>
            </div>
          </div>

          <div class="col-span-2 text-sm text-gray-700"><%= plan.author.name %></div>

          <div class="col-span-1">
            <% badge =
              case plan.status
              when "public" then "bg-emerald-50 text-emerald-900 border-emerald-200"
              when "draft" then "bg-amber-50 text-amber-900 border-amber-200"
              else "bg-gray-100 text-gray-700 border-gray-200"
              end
            %>
            <span class="inline-flex rounded-full border px-2.5 py-1 text-xs font-medium <%= badge %>"><%= plan.status %></span>
          </div>

          <div class="col-span-2 text-right text-sm font-medium text-gray-900">
            <%= number_to_currency(plan.monthly_price, unit: plan.currency, precision: 0) %>
          </div>

          <div class="col-span-3 flex justify-end gap-2">
            <%= link_to "Detail", admin_subscription_plan_path(plan), class: "rounded-xl border border-gray-300 bg-white px-3 py-2 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
            <%= link_to "Upravit", edit_admin_subscription_plan_path(plan), class: "rounded-xl border border-gray-300 bg-white px-3 py-2 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
            <%= button_to "Smazat", admin_subscription_plan_path(plan), method: :delete, data: { turbo_confirm: "Opravdu smazat plán?" }, class: "rounded-xl border border-rose-200 bg-rose-50 px-3 py-2 text-sm font-medium text-rose-900 hover:bg-rose-100" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="p-8 text-sm text-gray-700">Zatím tu nejsou žádné plány. Vytvořte první.</div>
  <% end %>
</div>
