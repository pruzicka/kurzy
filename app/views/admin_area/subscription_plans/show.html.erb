<div class="flex flex-col gap-6">
  <div class="flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
    <div class="flex flex-col gap-1">
      <h1 class="text-3xl font-semibold tracking-tight text-gray-900"><%= @subscription_plan.name %></h1>
      <div class="text-sm text-gray-600">
        <span class="font-medium text-gray-900"><%= @subscription_plan.status %></span>
        <span class="mx-2 text-gray-300">/</span>
        <%= number_to_currency(@subscription_plan.monthly_price, unit: @subscription_plan.currency, precision: 0) %>/měs
        <% if @subscription_plan.annual_discount_percent.positive? %>
          <span class="mx-2 text-gray-300">/</span>
          <%= number_to_currency(@subscription_plan.annual_price, unit: @subscription_plan.currency, precision: 0) %>/rok (<%= @subscription_plan.annual_discount_percent %>% sleva)
        <% end %>
      </div>
    </div>
    <div class="flex flex-wrap gap-2">
      <%= link_to "Upravit", edit_admin_subscription_plan_path(@subscription_plan), class: "rounded-2xl border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
      <%= link_to "Zpět na seznam", admin_subscription_plans_path, class: "rounded-2xl border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
    <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm lg:col-span-1">
      <% if @subscription_plan.cover_image.attached? %>
        <% thumb = (@subscription_plan.cover_image.variant(resize_to_fill: [720, 405]).processed rescue nil) %>
        <div class="overflow-hidden rounded-2xl border border-gray-200 bg-white">
          <% if thumb %>
            <%= image_tag thumb, class: "h-44 w-full object-cover" %>
          <% else %>
            <%= image_tag rails_blob_path(@subscription_plan.cover_image, disposition: "inline"), class: "h-44 w-full object-cover" %>
          <% end %>
        </div>
      <% end %>

      <h2 class="mt-4 text-lg font-semibold tracking-tight text-gray-900">Popis</h2>
      <div class="mt-3 text-sm text-gray-700">
        <% if @subscription_plan.description&.body&.present? %>
          <%= @subscription_plan.description %>
        <% else %>
          <span class="text-gray-500">Bez popisu.</span>
        <% end %>
      </div>

      <div class="mt-4 text-sm text-gray-600">
        <span class="font-medium text-gray-900">Autor:</span> <%= @subscription_plan.author.name %>
      </div>
    </div>

    <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm lg:col-span-2">
      <div class="flex items-center justify-between gap-4">
        <h2 class="text-lg font-semibold tracking-tight text-gray-900">Epizody</h2>
        <%= link_to "Nová epizoda", new_admin_subscription_plan_episode_path(@subscription_plan), class: "rounded-2xl bg-gray-900 px-4 py-2.5 text-sm font-medium text-white hover:bg-black" %>
      </div>

      <%= render "admin_area/subscription_plans/episodes_list", subscription_plan: @subscription_plan %>
    </div>
  </div>
</div>
