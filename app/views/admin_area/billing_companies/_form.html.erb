<%= form_with model: [:admin, billing_company], class: "flex flex-col gap-5" do |f| %>
  <% if billing_company.errors.any? %>
    <div class="rounded-2xl border border-rose-200 bg-rose-50 p-4 text-sm text-rose-900">
      <div class="font-semibold">Formulář obsahuje chyby:</div>
      <ul class="mt-2 list-disc pl-5">
        <% billing_company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col gap-2">
    <%= f.label :name, "Název firmy", class: "text-sm font-medium text-gray-900" %>
    <%= f.text_field :name, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
  </div>

  <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
    <div class="flex flex-col gap-2">
      <%= f.label :ico, "IČO", class: "text-sm font-medium text-gray-900" %>
      <%= f.text_field :ico, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
    </div>
    <div class="flex flex-col gap-2">
      <%= f.label :dic, "DIČ", class: "text-sm font-medium text-gray-900" %>
      <%= f.text_field :dic, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
    </div>
  </div>

  <div class="flex flex-col gap-2">
    <%= f.label :street, "Ulice a číslo", class: "text-sm font-medium text-gray-900" %>
    <%= f.text_field :street, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
  </div>

  <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
    <div class="flex flex-col gap-2">
      <%= f.label :city, "Město", class: "text-sm font-medium text-gray-900" %>
      <%= f.text_field :city, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
    </div>
    <div class="flex flex-col gap-2">
      <%= f.label :zip, "PSČ", class: "text-sm font-medium text-gray-900" %>
      <%= f.text_field :zip, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
    </div>
    <div class="flex flex-col gap-2">
      <%= f.label :country, "Země", class: "text-sm font-medium text-gray-900" %>
      <%= f.text_field :country, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
    </div>
  </div>

  <div class="flex flex-col gap-2">
    <%= f.label :fakturoid_slug, "Fakturoid slug", class: "text-sm font-medium text-gray-900" %>
    <%= f.text_field :fakturoid_slug, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
    <div class="text-xs text-gray-500">Slug účtu na Fakturoid.cz (volitelné, používá se z credentials pokud není vyplněno).</div>
  </div>

  <label class="flex items-center gap-3 text-sm text-gray-700">
    <%= f.check_box :active, class: "h-4 w-4 rounded border-gray-300 text-gray-900" %>
    Aktivní firma
  </label>

  <div class="flex items-center gap-3">
    <%= f.submit "Uložit", class: "inline-flex items-center justify-center rounded-2xl bg-gray-900 px-4 py-2.5 text-sm font-medium text-white hover:bg-black" %>
    <%= link_to "Zpět", admin_billing_companies_path, class: "inline-flex items-center justify-center rounded-2xl border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
  </div>
<% end %>
