<% content_for :layout_centered, true %>

<div class="w-full max-w-md">
  <div class="rounded-3xl bg-gradient-to-b from-white to-gray-50 p-1 shadow-sm ring-1 ring-gray-200">
    <div class="rounded-[22px] bg-white px-6 py-7 shadow-sm">
      <div class="flex items-center gap-3">
        <span class="inline-flex h-9 w-9 items-center justify-center rounded-2xl bg-gray-900 text-sm font-semibold text-white">K</span>
        <div class="flex flex-col">
          <h1 class="text-xl font-semibold tracking-tight text-gray-900">Přihlášení</h1>
          <p class="text-sm text-gray-600">Přístup do aplikace.</p>
        </div>
      </div>

      <div class="mt-6 flex flex-col gap-3">
        <% google_client_id = Rails.application.credentials.dig(:google, :client_id) || ENV["GOOGLE_CLIENT_ID"] %>
        <% google_client_secret = Rails.application.credentials.dig(:google, :client_secret) || ENV["GOOGLE_CLIENT_SECRET"] %>
        <% facebook_app_id = Rails.application.credentials.dig(:facebook, :app_id) || ENV["FACEBOOK_APP_ID"] %>
        <% facebook_app_secret = Rails.application.credentials.dig(:facebook, :app_secret) || ENV["FACEBOOK_APP_SECRET"] %>

        <% if google_client_id.present? && google_client_secret.present? %>
          <%= button_to "/auth/google_oauth2",
                        method: :post,
                        data: { turbo: false },
                        class: "inline-flex items-center justify-center gap-3 rounded-2xl border border-gray-200 bg-white px-4 py-2.5 text-sm font-semibold text-gray-900 shadow-sm hover:bg-gray-50" do %>
            <span class="inline-flex h-7 w-7 items-center justify-center rounded-full bg-white shadow-sm ring-1 ring-gray-200">
              <svg class="h-4 w-4" viewBox="0 0 48 48" aria-hidden="true">
                <path fill="#EA4335" d="M24 20.3v7.4h10.5C33.1 33 29 36 24 36c-6.3 0-11.5-5.2-11.5-11.5S17.7 13 24 13c3 0 5.7 1.1 7.8 3l5.3-5.3C33.6 7.4 28.9 5 24 5 13.5 5 5 13.5 5 24s8.5 19 19 19c10.9 0 18.7-7.6 18.7-18.4 0-1.2-.1-2-.3-2.9H24z"/>
                <path fill="#34A853" d="M6.7 14.3l6.1 4.5C14.2 15.3 18.8 13 24 13c3 0 5.7 1.1 7.8 3l5.3-5.3C33.6 7.4 28.9 5 24 5 16.4 5 9.7 9.3 6.7 14.3z"/>
                <path fill="#FBBC05" d="M24 43c4.7 0 9.1-1.6 12.4-4.4l-5.8-4.5c-1.7 1.1-3.9 1.8-6.6 1.8-5 0-9.3-3.4-10.8-8l-6 4.6C9.9 38.7 16.5 43 24 43z"/>
                <path fill="#4285F4" d="M43.7 24.6c0-1.2-.1-2-.3-2.9H24v7.4h10.5c-.8 2.8-2.6 5.1-4.9 6.5l5.8 4.5c3.4-3.1 5.3-7.7 5.3-12.9z"/>
              </svg>
            </span>
            <span>Přihlásit se přes Google</span>
          <% end %>
        <% end %>

        <% if facebook_app_id.present? && facebook_app_secret.present? %>
          <%= button_to "Přihlásit se přes Facebook",
                        "/auth/facebook",
                        method: :post,
                        data: { turbo: false },
                        class: "inline-flex items-center justify-center rounded-2xl border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 shadow-sm hover:bg-gray-50" %>
        <% end %>

        <% if (google_client_id.blank? || google_client_secret.blank?) && (facebook_app_id.blank? || facebook_app_secret.blank?) %>
          <div class="rounded-2xl border border-amber-200 bg-amber-50 p-4 text-sm text-amber-900">
            OAuth není nakonfigurovaný (chybí credentials nebo env vars).
          </div>
        <% end %>

      </div>
    </div>
  </div>

  <div class="mt-6 text-center text-sm text-gray-600">
    <%= link_to "Zpět na úvod", root_path, class: "font-medium text-gray-900 hover:underline" %>
  </div>
</div>
