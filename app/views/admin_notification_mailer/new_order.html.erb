<p>Nová zaplacená objednávka.</p>

<h2>Objednávka #<%= @order.id %></h2>

<p><strong>Zákazník:</strong> <%= @user.name %> (<%= @user.email %>)</p>

<table class="table">
  <thead>
    <tr>
      <th>Kurz</th>
      <th class="amount">Cena</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.display_name %></td>
        <td class="amount"><%= number_to_currency(item.total_amount / (@order.currency_precision.zero? ? 1.0 : 100.0), unit: @order.currency, precision: @order.display_precision) %></td>
      </tr>
    <% end %>
    <tr>
      <td><strong>Celkem</strong></td>
      <td class="amount"><strong><%= number_to_currency(@order.total_amount / (@order.currency_precision.zero? ? 1.0 : 100.0), unit: @order.currency, precision: @order.display_precision) %></strong></td>
    </tr>
  </tbody>
</table>
