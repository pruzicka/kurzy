<div class="flex items-end justify-between gap-4">
  <div class="flex flex-col gap-1">
    <h1 class="text-3xl font-semibold tracking-tight">Nastavení účtu</h1>
    <p class="text-gray-600">Upravte své údaje a profilovou fotku.</p>
  </div>
</div>

<div class="mt-6 rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
  <%= form_with model: @user, url: user_settings_path, class: "flex flex-col gap-6" do |f| %>
    <% if @user.errors.any? %>
      <div class="rounded-2xl border border-rose-200 bg-rose-50 p-4 text-sm text-rose-900">
        <div class="font-semibold">Formulář obsahuje chyby:</div>
        <ul class="mt-2 list-disc pl-5">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div class="flex flex-col gap-2">
        <%= f.label :first_name, "Jméno", class: "text-sm font-medium text-gray-900" %>
        <%= f.text_field :first_name, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
      </div>
      <div class="flex flex-col gap-2">
        <%= f.label :last_name, "Příjmení", class: "text-sm font-medium text-gray-900" %>
        <%= f.text_field :last_name, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div class="flex flex-col gap-2">
        <%= f.label :username, "Uživatelské jméno", class: "text-sm font-medium text-gray-900" %>
        <%= f.text_field :username, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
      </div>
      <div class="flex flex-col gap-2">
        <%= f.label :email, "E-mail", class: "text-sm font-medium text-gray-900" %>
        <%= f.email_field :email, class: "w-full rounded-2xl border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-900 shadow-sm outline-none focus:border-gray-900 focus:ring-2 focus:ring-gray-900/15" %>
      </div>
    </div>

    <div class="flex flex-col gap-2">
      <%= f.label :avatar, "Profilová fotka", class: "text-sm font-medium text-gray-900" %>
      <div data-controller="dropzone" class="rounded-2xl border border-gray-200 bg-white p-4 shadow-sm">
        <%= f.file_field :avatar,
                         direct_upload: true,
                         accept: "image/*",
                         data: { dropzone_target: "input", action: "change->dropzone#changed" },
                         class: "sr-only" %>
        <div
          data-dropzone-target="area"
          data-action="click->dropzone#open dragenter->dropzone#dragOver dragover->dropzone#dragOver dragleave->dropzone#dragLeave drop->dropzone#drop"
          class="cursor-pointer rounded-2xl border border-dashed border-gray-300 bg-gray-50 px-4 py-6 text-center text-sm text-gray-700 hover:border-gray-400"
        >
          <div class="font-medium text-gray-900">Přetáhněte fotku sem</div>
          <div class="mt-1 text-xs text-gray-600">
            Doporučeno čtverec (např. 512x512), JPG/PNG/WebP/AVIF/GIF, ideálně do 3 MB;
            <button type="button" data-action="click->dropzone#open" class="font-medium text-gray-900 underline underline-offset-2">vybrat soubor</button>
          </div>
          <pre data-dropzone-target="files" class="mt-3 whitespace-pre-line text-xs text-gray-600"></pre>
        </div>
        <div data-dropzone-target="progress" class="mt-3 space-y-2"></div>
      </div>

      <% if @user.avatar.attached? %>
        <div class="mt-2 flex items-center gap-3 text-xs text-gray-600">
          <%= image_tag @user.avatar.variant(resize_to_fill: [64, 64]), class: "h-12 w-12 rounded-full border border-gray-200 object-cover" %>
          <%= button_to "Odebrat fotku",
                        user_settings_path(remove_avatar: 1),
                        method: :patch,
                        class: "rounded-lg border border-rose-200 bg-rose-50 px-2.5 py-1 text-xs font-medium text-rose-900 hover:bg-rose-100" %>
        </div>
      <% elsif @user.avatar_url.present? %>
        <div class="mt-2 flex items-center gap-3 text-xs text-gray-600">
          <div class="relative h-12 w-12 shrink-0">
            <div class="flex h-12 w-12 items-center justify-center rounded-full bg-gray-100 text-sm font-semibold text-gray-500"><%= @user.name.first.upcase %></div>
            <%= image_tag @user.avatar_url, class: "absolute inset-0 h-12 w-12 rounded-full border border-gray-200 object-cover", referrerpolicy: "no-referrer", loading: "lazy", onerror: "this.remove()" %>
          </div>
          <span>Fotka z OAuth profilu</span>
        </div>
      <% end %>
    </div>

    <div class="flex items-center gap-3">
      <%= f.submit "Uložit", class: "inline-flex items-center justify-center rounded-2xl bg-gray-900 px-4 py-2.5 text-sm font-medium text-white hover:bg-black" %>
      <%= link_to "Zpět", user_root_path, class: "inline-flex items-center justify-center rounded-2xl border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 hover:bg-gray-50" %>
    </div>
  <% end %>
</div>

<%# ── Fakturační údaje ── %>
<div class="mt-6 rounded-2xl border border-gray-200 bg-white p-6 shadow-sm" data-controller="ares-lookup">
  <div class="text-sm font-semibold text-gray-900">Fakturační údaje</div>
  <p class="mt-1 text-sm text-gray-600">Tyto údaje budou předvyplněny při nákupu a použity pro vystavení faktury.</p>

  <%= form_with model: @user, url: user_settings_path, class: "mt-4 flex flex-col gap-4" do |f| %>
    <div class="flex flex-col gap-2">
      <%= f.label :billing_name, "Jméno nebo název firmy", class: "text-sm font-medium text-gray-900" %>
      <%= f.text_field :billing_name, placeholder: "Jan Novák / Firma s.r.o.", class: input_class_for(@user, :billing_name), data: { ares_lookup_target: "name" } %>
      <% if @user.errors[:billing_name].any? %>
        <p class="text-xs text-rose-600"><%= @user.errors[:billing_name].first %></p>
      <% end %>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div class="flex flex-col gap-2">
        <%= f.label :billing_street, "Ulice a číslo", class: "text-sm font-medium text-gray-900" %>
        <%= f.text_field :billing_street, placeholder: "Květinová 123/4", class: input_class_for(@user, :billing_street), data: { ares_lookup_target: "street" } %>
        <% if @user.errors[:billing_street].any? %>
          <p class="text-xs text-rose-600"><%= @user.errors[:billing_street].first %></p>
        <% end %>
      </div>
      <div class="flex flex-col gap-2">
        <%= f.label :billing_city, "Město", class: "text-sm font-medium text-gray-900" %>
        <%= f.text_field :billing_city, placeholder: "Praha", class: input_class_for(@user, :billing_city), data: { ares_lookup_target: "city" } %>
        <% if @user.errors[:billing_city].any? %>
          <p class="text-xs text-rose-600"><%= @user.errors[:billing_city].first %></p>
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div class="flex flex-col gap-2">
        <%= f.label :billing_zip, "PSČ", class: "text-sm font-medium text-gray-900" %>
        <%= f.text_field :billing_zip, placeholder: "110 00", class: input_class_for(@user, :billing_zip), data: { ares_lookup_target: "zip" } %>
        <% if @user.errors[:billing_zip].any? %>
          <p class="text-xs text-rose-600"><%= @user.errors[:billing_zip].first %></p>
        <% end %>
      </div>
      <div class="flex flex-col gap-2">
        <%= f.label :billing_country, "Země", class: "text-sm font-medium text-gray-900" %>
        <%= f.text_field :billing_country, placeholder: "CZ", class: input_class_for(@user, :billing_country), data: { ares_lookup_target: "country" } %>
        <% if @user.errors[:billing_country].any? %>
          <p class="text-xs text-rose-600"><%= @user.errors[:billing_country].first %></p>
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div class="flex flex-col gap-2">
        <%= f.label :billing_ico, "IČO", class: "text-sm font-medium text-gray-900" %>
        <%= f.text_field :billing_ico, placeholder: "12345678", class: input_class_for(@user, :billing_ico), data: { ares_lookup_target: "ico", action: "blur->ares-lookup#lookup" } %>
        <p class="text-xs hidden" data-ares-lookup-target="status"></p>
        <% if @user.errors[:billing_ico].any? %>
          <p class="text-xs text-rose-600"><%= @user.errors[:billing_ico].first %></p>
        <% end %>
      </div>
      <div class="flex flex-col gap-2">
        <%= f.label :billing_dic, "DIČ", class: "text-sm font-medium text-gray-900" %>
        <%= f.text_field :billing_dic, placeholder: "CZ12345678", class: input_class_for(@user, :billing_dic), data: { ares_lookup_target: "dic" } %>
        <% if @user.errors[:billing_dic].any? %>
          <p class="text-xs text-rose-600"><%= @user.errors[:billing_dic].first %></p>
        <% end %>
      </div>
    </div>

    <div>
      <%= f.submit "Uložit fakturační údaje", class: "inline-flex items-center justify-center rounded-2xl bg-gray-900 px-4 py-2.5 text-sm font-medium text-white hover:bg-black" %>
    </div>
  <% end %>
</div>

<%# ── Linked OAuth accounts ── %>
<div class="mt-6 rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
  <div class="text-sm font-semibold text-gray-900">Propojené účty</div>
  <p class="mt-1 text-sm text-gray-600">Propojte více přihlašovacích metod ke svému účtu.</p>

  <div class="mt-4 flex flex-col gap-3">
    <% { "google_oauth2" => "Google", "facebook" => "Facebook" }.each do |provider, label| %>
      <% identity = @user.oauth_identities.find { |i| i.provider == provider } %>
      <div class="flex items-center justify-between rounded-xl border border-gray-200 bg-gray-50 px-4 py-3">
        <div class="flex items-center gap-3">
          <span class="text-sm font-medium text-gray-900"><%= label %></span>
          <% if identity %>
            <span class="inline-flex items-center rounded-full bg-emerald-50 px-2 py-0.5 text-xs font-medium text-emerald-700 ring-1 ring-emerald-600/20 ring-inset">Propojeno</span>
          <% end %>
        </div>
        <% if identity %>
          <% if @user.oauth_identities.size > 1 %>
            <%= button_to "Odpojit",
                          user_oauth_identity_path(identity),
                          method: :delete,
                          data: { turbo_confirm: "Opravdu chcete odpojit #{label}?" },
                          class: "rounded-lg border border-gray-300 bg-white px-2.5 py-1 text-xs font-medium text-gray-900 hover:bg-gray-50" %>
          <% end %>
        <% else %>
          <%= button_to "Propojit",
                        "/auth/#{provider}",
                        method: :post,
                        class: "rounded-lg border border-gray-300 bg-white px-2.5 py-1 text-xs font-medium text-gray-900 hover:bg-gray-50" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<%# ── Active sessions ── %>
<div class="mt-6 rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
  <div class="flex items-center justify-between">
    <div>
      <div class="text-sm font-semibold text-gray-900">Aktivní relace</div>
      <p class="mt-1 text-sm text-gray-600">Zařízení, ze kterých jste přihlášeni.</p>
    </div>
    <% if @user_sessions.size > 1 %>
      <%= button_to "Odhlásit vše ostatní",
                    destroy_all_other_user_user_sessions_path,
                    method: :delete,
                    data: { turbo_confirm: "Odhlásit všechny ostatní relace?" },
                    class: "rounded-lg border border-gray-300 bg-white px-2.5 py-1 text-xs font-medium text-gray-900 hover:bg-gray-50" %>
    <% end %>
  </div>

  <div class="mt-4 flex flex-col gap-3">
    <% @user_sessions.each do |user_session| %>
      <div class="flex items-center justify-between rounded-xl border border-gray-200 bg-gray-50 px-4 py-3">
        <div class="flex flex-col gap-0.5">
          <div class="flex items-center gap-2">
            <span class="text-sm font-medium text-gray-900">
              <%= browser_name(user_session.user_agent) %> / <%= os_name(user_session.user_agent) %>
            </span>
            <% if user_session.session_token == session[:session_token] %>
              <span class="inline-flex items-center rounded-full bg-blue-50 px-2 py-0.5 text-xs font-medium text-blue-700 ring-1 ring-blue-600/20 ring-inset">Aktuální</span>
            <% end %>
          </div>
          <span class="text-xs text-gray-500">
            IP: <%= user_session.ip_address %> · Naposledy aktivní: <%= time_ago_in_words(user_session.last_active_at) %> zpět
          </span>
        </div>
        <% unless user_session.session_token == session[:session_token] %>
          <%= button_to "Odhlásit",
                        user_user_session_path(user_session),
                        method: :delete,
                        class: "rounded-lg border border-gray-300 bg-white px-2.5 py-1 text-xs font-medium text-gray-900 hover:bg-gray-50" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="mt-6 rounded-2xl border border-rose-200 bg-rose-50 p-6 shadow-sm">
  <div class="text-sm font-semibold text-rose-900">Smazat účet</div>
  <p class="mt-2 text-sm text-rose-900/80">
    Tato akce je nevratná. Smažeme váš účet, nákupy i průběh kurzů.
  </p>
  <div class="mt-4">
    <%= button_to "Smazat účet",
                  user_settings_path,
                  method: :delete,
                  data: { turbo_confirm: "Opravdu chcete smazat účet? Tato akce je nevratná." },
                  class: "inline-flex items-center justify-center rounded-2xl border border-rose-200 bg-white px-4 py-2.5 text-sm font-semibold text-rose-900 hover:bg-rose-100" %>
  </div>
</div>
